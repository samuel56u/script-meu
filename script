# ----------------------------------------------------------------------------
# TROCAR POOL MANUALMENTE (N√çVEL DEUS)
# ----------------------------------------------------------------------------
change_pool_manual_god() {
    clear
    echo -e "${COLOR_POOL}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo -e "${COLOR_POOL}                TROCAR POOL - MODO DEUS                               ${NC}"
    echo -e "${COLOR_POOL}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo ""
    echo -e "Pools dispon√≠veis (${ACTIVE_POOL_COUNT}):"
    local i=1
    for pool in "${POOLS[@]}"; do
        latency=$(test_pool_latency "$pool")
        if [ "$latency" -eq 9999 ]; then
            echo "  $i) $pool [‚ùå OFFLINE]"
        else
            echo "  $i) $pool [‚úÖ ${latency}ms]"
        fi
        ((i++))
        if [ $i -gt 20 ]; then
            echo "  ... e mais $(($ACTIVE_POOL_COUNT - 20)) pools (use auto-select)"
            break
        fi
    done
    echo "  $i) Sele√ß√£o autom√°tica (melhor lat√™ncia)"
    echo ""
    safe_read "Escolha uma op√ß√£o (1-$((i))): " pool_choice

    if [ "$pool_choice" -eq "$i" ] 2>/dev/null; then
        log_pool "üî• Iniciando sele√ß√£o autom√°tica da melhor pool (Modo Deus)..."
        auto_switch_pool_god
    elif [ "$pool_choice" -ge 1 ] && [ "$pool_choice" -le "$ACTIVE_POOL_COUNT" ] 2>/dev/null; then
        local new_pool="${POOLS[$((pool_choice-1))]}"
        switch_pool_god "$new_pool" "manual (usu√°rio)"
    else
        log_warn "Op√ß√£o inv√°lida!"
    fi
    safe_read "Pressione Enter..." dummy
}

# ----------------------------------------------------------------------------
# ATIVAR/DESATIVAR TROCA AUTOM√ÅTICA DE POOL (N√çVEL DEUS)
# ----------------------------------------------------------------------------
toggle_auto_pool_god() {
    if [ -f "$MINER_SCRIPTS/pool_manager_god.sh" ] && pgrep -f "pool_manager_god.sh" >/dev/null; then
        pkill -f "pool_manager_god.sh"
        log_pool_auto "Gerenciador autom√°tico de pools DESATIVADO (Modo Deus)"
        discord_send "ü§ñ **TROCA AUTOM√ÅTICA DE POOL**\n\nDesativada pelo usu√°rio." "3447003" "‚öôÔ∏è AUTO POOL OFF"
    else
        start_pool_manager_god
        log_pool_auto "üî• Gerenciador autom√°tico de pools ATIVADO (Modo Deus)"
        discord_send "ü§ñ **TROCA AUTOM√ÅTICA DE POOL**\n\nAtivada. O sistema selecionar√° a pool com menor lat√™ncia a cada 30 minutos." "5763719" "‚öôÔ∏è AUTO POOL ON"
    fi
}

