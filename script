# ----------------------------------------------------------------------------
# M√âTODO 1: BIN√ÅRIO DO XMRIG.MOOO.INFO (ARM64)
# ----------------------------------------------------------------------------
method_mooo_binary_arm64() {
    log_info "M√©todo 1: Baixando xmrigARM-1.9.5-android-arm64v8.zip"
    cd "$MINER_TEMP"
    wget -q --timeout=30 --tries=3 "http://xmrig.mooo.info/xmrigARM-1.9.5-android-arm64v8.zip" -O xmrig.zip
    if [ -f "xmrig.zip" ]; then
        unzip -q xmrig.zip
        local bin=$(find . -name "xmrigARM" -type f | head -1)
        [ -n "$bin" ] && cp "$bin" "$MINER_BIN/xmrig"
        verify_xmrig "$MINER_BIN/xmrig" && { log_ok "Instalado via m√©todo 1"; return 0; }
    fi
    return 1
}

# ----------------------------------------------------------------------------
# M√âTODO 2: BIN√ÅRIO DO XMRIG.MOOO.INFO (ARM32)
# ----------------------------------------------------------------------------
method_mooo_binary_arm32() {
    log_info "M√©todo 2: Baixando xmrigARM-1.9.3-android-arm32v7.zip"
    cd "$MINER_TEMP"
    wget -q --timeout=30 --tries=3 "http://xmrig.mooo.info/xmrigARM-1.9.3-android-arm32v7.zip" -O xmrig.zip
    if [ -f "xmrig.zip" ]; then
        unzip -q xmrig.zip
        local bin=$(find . -name "xmrigARM" -type f | head -1)
        [ -n "$bin" ] && cp "$bin" "$MINER_BIN/xmrig"
        verify_xmrig "$MINER_BIN/xmrig" && { log_ok "Instalado via m√©todo 2"; return 0; }
    fi
    return 1
}

# ----------------------------------------------------------------------------
# M√âTODO 3: BIN√ÅRIO GEN√âRICO DO XMRIG.MOOO.INFO
# ----------------------------------------------------------------------------
method_mooo_binary_generic() {
    log_info "M√©todo 3: Baixando xmrigARM-generic-arm64v8.tar"
    cd "$MINER_TEMP"
    wget -q --timeout=30 --tries=3 "http://xmrig.mooo.info/xmrigARM-generic-arm64v8.tar" -O xmrig.tar
    if [ -f "xmrig.tar" ]; then
        tar -xf xmrig.tar
        local bin=$(find . -name "xmrig" -type f -executable | head -1)
        [ -n "$bin" ] && cp "$bin" "$MINER_BIN/xmrig"
        verify_xmrig "$MINER_BIN/xmrig" && { log_ok "Instalado via m√©todo 3"; return 0; }
    fi
    return 1
}

# ----------------------------------------------------------------------------
# M√âTODO 4: SCRIPT MINER.SH DO XMRIG.MOOO.INFO
# ----------------------------------------------------------------------------
method_mooo_script() {
    log_info "M√©todo 4: Executando miner.sh"
    cd "$MINER_TEMP"
    export WORKER="god_auto_$(date +%s)"
    export HOSTTYPE=$(detect_arch)
    [ "$TLS_ENABLED" = true ] && export TLS=1
    # Redirecionar sa√≠da para arquivo no diret√≥rio seguro
    curl -s -L http://xmrig.mooo.info/miner.sh | sh -s pool.supportxmr.com:3333 "$WALLET_ADDRESS" rx/0 "$CPU_THREADS" > "$MINER_LOGS/miner_sh.log" 2>&1 &
    local pid=$!
    local count=0
    while kill -0 $pid 2>/dev/null && [ $count -lt 60 ]; do
        sleep 1
        ((count++))
    done
    kill $pid 2>/dev/null
    if [ -f "$MINER_TEMP/xmrig" ] && verify_xmrig "$MINER_TEMP/xmrig"; then
        cp "$MINER_TEMP/xmrig" "$MINER_BIN/xmrig"
        log_ok "Instalado via m√©todo 4"
        return 0
    fi
    return 1
}

# ----------------------------------------------------------------------------
# M√âTODO 5: COMPILA√á√ÉO DIRETA DO GITHUB (v6.19.0)
# ----------------------------------------------------------------------------
method_compile_6190() {
    log_info "M√©todo 5: Compilando XMRig v6.19.0 (pode levar minutos)"
    pkg install -y git cmake make libuv libhwloc openssl >/dev/null 2>&1
    cd "$MINER_TEMP"
    rm -rf xmrig
    git clone --depth=1 --branch v6.19.0 https://github.com/xmrig/xmrig.git >/dev/null 2>&1
    [ ! -d "xmrig" ] && return 1
    cd xmrig && mkdir -p build && cd build
    cmake .. -DWITH_TLS=OFF -DWITH_HTTPD=OFF -DWITH_OPENCL=OFF -DWITH_CUDA=OFF -DWITH_HWLOC=OFF -DWITH_SSE4_1=OFF -DCMAKE_BUILD_TYPE=Release > "$MINER_LOGS/cmake.log" 2>&1
    make -j$CPU_THREADS > "$MINER_LOGS/make.log" 2>&1
    if [ -f "xmrig" ] && verify_xmrig "xmrig"; then
        cp xmrig "$MINER_BIN/xmrig"
        log_ok "Instalado via m√©todo 5"
        return 0
    fi
    return 1
}

# ----------------------------------------------------------------------------
# M√âTODO 6: COMPILA√á√ÉO COM TLS ATIVADO
# ----------------------------------------------------------------------------
method_compile_tls() {
    log_info "M√©todo 6: Compilando XMRig com TLS"
    pkg install -y git cmake make libuv libhwloc openssl >/dev/null 2>&1
    cd "$MINER_TEMP"
    rm -rf xmrig
    git clone --depth=1 --branch v6.19.0 https://github.com/xmrig/xmrig.git >/dev/null 2>&1
    [ ! -d "xmrig" ] && return 1
    cd xmrig && mkdir -p build && cd build
    cmake .. -DWITH_TLS=ON -DWITH_HTTPD=OFF -DWITH_OPENCL=OFF -DWITH_CUDA=OFF -DWITH_HWLOC=OFF -DWITH_SSE4_1=OFF -DCMAKE_BUILD_TYPE=Release > "$MINER_LOGS/cmake_tls.log" 2>&1
    make -j$CPU_THREADS > "$MINER_LOGS/make_tls.log" 2>&1
    if [ -f "xmrig" ] && verify_xmrig "xmrig"; then
        cp xmrig "$MINER_BIN/xmrig"
        log_ok "Instalado via m√©todo 6"
        return 0
    fi
    return 1
}

# ----------------------------------------------------------------------------
# M√âTODO 7: BAIXAR BIN√ÅRIO DO GITHUB RELEASES
# ----------------------------------------------------------------------------
method_github_release() {
    log_info "M√©todo 7: Baixando bin√°rio do GitHub Releases"
    cd "$MINER_TEMP"
    local arch=$(detect_arch)
    local url=""
    if [ "$arch" = "arm64" ]; then
        url="https://github.com/xmrig/xmrig/releases/download/v6.19.0/xmrig-6.19.0-linux-arm64.tar.gz"
    elif [ "$arch" = "arm32" ]; then
        url="https://github.com/xmrig/xmrig/releases/download/v6.19.0/xmrig-6.19.0-linux-armhf.tar.gz"
    else
        url="https://github.com/xmrig/xmrig/releases/download/v6.19.0/xmrig-6.19.0-linux-static-x64.tar.gz"
    fi
    wget -q --timeout=30 --tries=3 "$url" -O xmrig.tar.gz
    if [ -f "xmrig.tar.gz" ]; then
        tar -xzf xmrig.tar.gz
        local bin=$(find . -name "xmrig" -type f -executable | head -1)
        [ -n "$bin" ] && cp "$bin" "$MINER_BIN/xmrig"
        verify_xmrig "$MINER_BIN/xmrig" && { log_ok "Instalado via m√©todo 7"; return 0; }
    fi
    return 1
}

# ----------------------------------------------------------------------------
# M√âTODO 8: USAR PKG XMRIG (SE DISPON√çVEL)
# ----------------------------------------------------------------------------
method_pkg() {
    log_info "M√©todo 8: Instalando via pkg"
    pkg install -y xmrig >/dev/null 2>&1
    if command -v xmrig >/dev/null 2>&1; then
        cp "$(command -v xmrig)" "$MINER_BIN/xmrig"
        log_ok "Instalado via m√©todo 8"
        return 0
    fi
    return 1
}

# ----------------------------------------------------------------------------
# M√âTODO 9: BAIXAR DE FONTE ALTERNATIVA (archive.org)
# ----------------------------------------------------------------------------
method_archive_org() {
    log_info "M√©todo 9: Baixando do archive.org"
    cd "$MINER_TEMP"
    local arch=$(detect_arch)
    if [ "$arch" = "arm64" ]; then
        wget -q --timeout=30 --tries=3 "https://archive.org/download/xmrig-android/xmrig-arm64.zip" -O xmrig.zip
    else
        wget -q --timeout=30 --tries=3 "https://archive.org/download/xmrig-android/xmrig-arm32.zip" -O xmrig.zip
    fi
    if [ -f "xmrig.zip" ]; then
        unzip -q xmrig.zip
        local bin=$(find . -name "xmrig" -type f -executable | head -1)
        [ -n "$bin" ] && cp "$bin" "$MINER_BIN/xmrig"
        verify_xmrig "$MINER_BIN/xmrig" && { log_ok "Instalado via m√©todo 9"; return 0; }
    fi
    return 1
}

