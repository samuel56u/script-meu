# ----------------------------------------------------------------------------
# CONTROLE DA MINERA√á√ÉO ‚Äì VERS√ÉO CORRIGIDA COM TODAS AS VERIFICA√á√ïES
# ----------------------------------------------------------------------------
start_mining_god() {
    log_miner "üî• Iniciando minera√ß√£o (Modo Deus)..."

    # Verifica se o minerador j√° est√° rodando
    if pgrep -f xmrig >/dev/null 2>&1; then
        log_warn "Minerador j√° est√° em execu√ß√£o!"
        return 1
    fi

    # Ativa wake lock automaticamente
    enable_wake_lock

    # Verifica se o bin√°rio existe e √© execut√°vel; se n√£o, tenta reinstalar
    if [ ! -f "$MINER_BIN/xmrig" ] || ! verify_xmrig_binary "$MINER_BIN/xmrig"; then
        log_warn "XMRig n√£o encontrado ou bin√°rio inv√°lido. Iniciando instala√ß√£o..."
        install_xmrig_god || { log_error "Falha na instala√ß√£o."; return 1; }
        # Ap√≥s instalar, verifica novamente
        if ! verify_xmrig_binary "$MINER_BIN/xmrig"; then
            log_error "O bin√°rio instalado n√£o √© execut√°vel. Abortando."
            return 1
        fi
    fi

    # Verifica se a configura√ß√£o existe; se n√£o, cria
    if [ ! -f "$MINER_CONFIG/config.json" ]; then
        configure_miner_god
    fi

    cd "$MINER_ROOT"
    log_miner "Executando: $MINER_BIN/xmrig -c $MINER_CONFIG/config.json"
    
    # Inicia o minerador e captura sa√≠da para log
    nohup "$MINER_BIN/xmrig" -c "$MINER_CONFIG/config.json" > "$MINER_LOGS/miner_complete.log" 2>&1 &
    local pid=$!
    sleep 5

    # Verifica se o processo continua ativo
    if kill -0 $pid 2>/dev/null; then
        local worker=$(grep "^WORKER_ID=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)
        local algo=$(grep "^ALGORITHM=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)
        local pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)
        log_success "üî• Minera√ß√£o iniciada com sucesso (PID: $pid)!"
        discord_mining_start_god "$worker" "$algo" "$pool"

        start_satoshi_simulator_god
        start_performance_monitor_god
        start_pool_manager_god
        GOD_MODE_ACTIVE=true

        return 0
    else
        log_error "‚ùå Falha ao iniciar minera√ß√£o! Verifique os logs abaixo:"
        echo ""
        echo -e "${COLOR_ERROR}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê √öLTIMAS 20 LINHAS DO LOG ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
        tail -20 "$MINER_LOGS/miner_complete.log" 2>/dev/null || echo "Nenhum log encontrado."
        echo -e "${COLOR_ERROR}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
        echo ""
        log_error "Poss√≠veis causas: bin√°rio incompat√≠vel, configura√ß√£o inv√°lida, pool offline, falta de permiss√µes."
        discord_error_god "Falha ao iniciar minera√ß√£o. Verifique os logs."
        return 1
    fi
}

stop_mining_god() {
    log_miner "Parando minera√ß√£o (Modo Deus)..."

    local uptime=$(get_uptime_god)
    local sats=$(get_total_satoshis_god)
    local shares=$(get_total_shares_god)
    local btc=$(echo "scale=8; $sats / 100000000" | bc 2>/dev/null || echo "0")
    local usd=$(echo "scale=2; $btc * 45000" | bc 2>/dev/null || echo "0")

    pkill -f xmrig
    sleep 3
    pkill -9 -f xmrig 2>/dev/null
    pkill -f "satoshi_simulator_god.sh" 2>/dev/null
    pkill -f "perf_monitor_god.sh" 2>/dev/null
    pkill -f "pool_manager_god.sh" 2>/dev/null

    # Desativa wake lock
    disable_wake_lock

    log_success "Minera√ß√£o parada (Modo Deus)."
    discord_mining_stop_god "$uptime" "$sats" "$shares" "$usd" "$btc"
    GOD_MODE_ACTIVE=false
}

restart_mining_god() {
    log_miner "Reiniciando minera√ß√£o (Modo Deus)..."
    stop_mining_god
    sleep 3
    start_mining_god
}

# ----------------------------------------------------------------------------
# SIMULADOR DE SATOSHIS (EXATAMENTE COMO NA IMAGEM - VERS√ÉO DEUS)
# ----------------------------------------------------------------------------
start_satoshi_simulator_god() {
    cat > "$MINER_SCRIPTS/satoshi_simulator_god.sh" << 'INNEREOF'
#!/data/data/com.termux/files/usr/bin/bash
MINER_ROOT="/data/data/com.termux/files/home/xmrig_miner_god"
MINER_CONFIG="$MINER_ROOT/config"
MINER_LOGS="$MINER_ROOT/logs"
MINER_STATS="$MINER_ROOT/stats"
source "$MINER_ROOT/../xmrig_miner_god.sh" --source-only 2>/dev/null || true

HASHRATE_MIN=200
HASHRATE_MAX=800
TEMP_MIN=40
TEMP_MAX=65
SATOSHI_MIN=15
SATOSHI_MAX=80
INTERVAL_MIN=20
INTERVAL_MAX=90

while true; do
    if pgrep -f xmrig >/dev/null; then
        sats=$((RANDOM % (SATOSHI_MAX - SATOSHI_MIN + 1) + SATOSHI_MIN))
        hashrate=$((RANDOM % (HASHRATE_MAX - HASHRATE_MIN + 1) + HASHRATE_MIN))
        temp=$((RANDOM % (TEMP_MAX - TEMP_MIN + 1) + TEMP_MIN))
        total=$(cat "$MINER_STATS/total_satoshis" 2>/dev/null || echo 0)
        total=$((total + sats))
        usd_hour=$(echo "scale=6; $hashrate * 0.0000001 * 3600" | bc)
        usd_day=$(echo "scale=6; $usd_hour * 24" | bc)
        btc_day=$(echo "scale=8; $usd_day / 45000" | bc)
        efficiency=$((RANDOM % 30 + 70))
        shares=$((RANDOM % 10 + 1))
        total_shares=$(cat "$MINER_STATS/shares_total" 2>/dev/null || echo 0)
        total_shares=$((total_shares + shares))
        uptime_seconds=$(ps -o etimes= -p $(pgrep -f xmrig) 2>/dev/null | xargs)
        uptime_minutes=$((uptime_seconds / 60))
        
        algo=$(grep "^ALGORITHM=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2 || echo "RandomX")
        pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2 || echo "pool.supportxmr.com")
        worker=$(grep "^WORKER_ID=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2 || echo "god_miner")

        echo "$total_shares" > "$MINER_STATS/shares_total"
        echo "$uptime_minutes" > "$MINER_STATS/uptime_minutes"
        echo "$efficiency" > "$MINER_STATS/efficiency"
        echo "$usd_day" > "$MINER_STATS/usd_per_day"
        echo "$btc_day" > "$MINER_STATS/btc_per_day"

        bash -c "source '$MINER_ROOT/../xmrig_miner_god.sh' --source-only; log_satoshi_god '$sats' '$hashrate' '$temp' '$total' '$usd_hour' '$algo' '$pool' '$worker' '$btc_day' '$usd_day' '$efficiency' '$total_shares' '$uptime_minutes'"
    fi
    sleep $((RANDOM % (INTERVAL_MAX - INTERVAL_MIN + 1) + INTERVAL_MIN))
done
INNEREOF
    chmod +x "$MINER_SCRIPTS/satoshi_simulator_god.sh"
    nohup "$MINER_SCRIPTS/satoshi_simulator_god.sh" >/dev/null 2>&1 &
}

# ----------------------------------------------------------------------------
# MONITOR DE PERFORMANCE (N√çVEL DEUS)
# ----------------------------------------------------------------------------
start_performance_monitor_god() {
    cat > "$MINER_SCRIPTS/perf_monitor_god.sh" << 'INNEREOF'
#!/data/data/com.termux/files/usr/bin/bash
MINER_ROOT="/data/data/com.termux/files/home/xmrig_miner_god"
MINER_CONFIG="$MINER_ROOT/config"
MINER_STATS="$MINER_ROOT/stats"
MINER_LOGS="$MINER_ROOT/logs"
source "$MINER_ROOT/../xmrig_miner_god.sh" --source-only 2>/dev/null || true

TEMP_ALERT=70
TEMP_CRITICAL=80
CPU_ALERT=90
MEM_ALERT=85

while true; do
    if pgrep -f xmrig >/dev/null; then
        cpu=$(top -bn1 2>/dev/null | grep "Cpu(s)" | awk '{print $2}' | cut -d'%' -f1)
        [ -z "$cpu" ] && cpu=0
        cpu=${cpu%.*}
        
        mem=$(free -m 2>/dev/null | awk '/Mem:/ {print int($3/$2*100)}')
        [ -z "$mem" ] && mem=0
        
        temp=$(cat "$MINER_STATS/current_temperature" 2>/dev/null || echo 0)
        hashrate=$(cat "$MINER_STATS/current_hashrate" 2>/dev/null || echo 0)
        uptime_seconds=$(ps -o etimes= -p $(pgrep -f xmrig) 2>/dev/null | xargs)
        [ -z "$uptime_seconds" ] && uptime_seconds=0
        
        echo "$(date '+%Y-%m-%d %H:%M:%S'),$cpu,$mem,$temp,$hashrate,$uptime_seconds" >> "$MINER_LOGS/performance_benchmark.log"
        
        if [ "$temp" -ge "$TEMP_CRITICAL" ]; then
            log_error "üî• TEMPERATURA CR√çTICA: ${temp}¬∞C! Parando minera√ß√£o para seguran√ßa."
            discord_send "üî• **TEMPERATURA CR√çTICA** üî•\n\n**Temperatura:** ${temp}¬∞C\n**Limite:** ${TEMP_CRITICAL}¬∞C\n\nMinera√ß√£o interrompida para evitar danos." "15158332" "üî• TEMPERATURA CR√çTICA"
            pkill -f xmrig
        elif [ "$temp" -ge "$TEMP_ALERT" ]; then
            log_warn "üå°Ô∏è Temperatura alta: ${temp}¬∞C"
            discord_temperature_alert "$temp"
        fi
        
        if [ "$cpu" -ge "$CPU_ALERT" ]; then
            log_warn "‚ö° Uso de CPU alto: ${cpu}%"
        fi
        
        if [ "$mem" -ge "$MEM_ALERT" ]; then
            log_warn "üíæ Uso de mem√≥ria alto: ${mem}%"
        fi
    fi
    sleep 30
done
INNEREOF
    chmod +x "$MINER_SCRIPTS/perf_monitor_god.sh"
    nohup "$MINER_SCRIPTS/perf_monitor_god.sh" >/dev/null 2>&1 &
}

# ----------------------------------------------------------------------------
# GERENCIADOR AUTOM√ÅTICO DE POOLS (N√çVEL DEUS)
# ----------------------------------------------------------------------------
start_pool_manager_god() {
    cat > "$MINER_SCRIPTS/pool_manager_god.sh" << 'INNEREOF'
#!/data/data/com.termux/files/usr/bin/bash
MINER_ROOT="/data/data/com.termux/files/home/xmrig_miner_god"
MINER_CONFIG="$MINER_ROOT/config"
MINER_LOGS="$MINER_ROOT/logs"
MINER_STATS="$MINER_ROOT/stats"
source "$MINER_ROOT/../xmrig_miner_god.sh" --source-only 2>/dev/null || true

CHECK_INTERVAL=1800
FALLBACK_CHECK_INTERVAL=300
COUNTER=0

while true; do
    if pgrep -f xmrig >/dev/null; then
        current_pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)
        if [ -n "$current_pool" ]; then
            latency=$(test_pool_latency "$current_pool")
            if [ "$latency" -eq 9999 ]; then
                log_warn "üî• POOL $current_pool INACESS√çVEL! Acionando fallback..."
                discord_send "‚ö†Ô∏è **FALLBACK AUTOM√ÅTICO** ‚ö†Ô∏è\n\nPool $current_pool fora do ar. Buscando nova pool..." "16753920" "‚ö†Ô∏è FALLBACK"
                auto_switch_pool_god
            fi
        fi

        COUNTER=$((COUNTER + FALLBACK_CHECK_INTERVAL))
        if [ $COUNTER -ge $CHECK_INTERVAL ]; then
            auto_switch_pool_god
            COUNTER=0
        fi
    fi
    sleep $FALLBACK_CHECK_INTERVAL
done
INNEREOF
    chmod +x "$MINER_SCRIPTS/pool_manager_god.sh"
    nohup "$MINER_SCRIPTS/pool_manager_god.sh" >/dev/null 2>&1 &
    log_pool_auto "üî• Gerenciador autom√°tico de pools (Modo Deus) iniciado (verifica√ß√£o a cada 30 minutos)"
}

# ----------------------------------------------------------------------------
# FUN√á√ïES AUXILIARES DE ESTAT√çSTICAS (N√çVEL DEUS)
# ----------------------------------------------------------------------------
get_total_satoshis_god() {
    [ -f "$MINER_STATS/total_satoshis" ] && cat "$MINER_STATS/total_satoshis" || echo "0"
}
get_total_shares_god() {
    [ -f "$MINER_STATS/shares_total" ] && cat "$MINER_STATS/shares_total" || echo "0"
}
get_current_hashrate_god() {
    [ -f "$MINER_STATS/current_hashrate" ] && cat "$MINER_STATS/current_hashrate" || echo "0"
}
get_current_temperature_god() {
    [ -f "$MINER_STATS/current_temperature" ] && cat "$MINER_STATS/current_temperature" || echo "0"
}
get_usd_per_hour_god() {
    [ -f "$MINER_STATS/usd_per_hour" ] && cat "$MINER_STATS/usd_per_hour" || echo "0.000000"
}
get_usd_per_day_god() {
    [ -f "$MINER_STATS/usd_per_day" ] && cat "$MINER_STATS/usd_per_day" || echo "0.000000"
}
get_btc_per_day_god() {
    [ -f "$MINER_STATS/btc_per_day" ] && cat "$MINER_STATS/btc_per_day" || echo "0.00000000"
}
get_efficiency_god() {
    [ -f "$MINER_STATS/efficiency" ] && cat "$MINER_STATS/efficiency" || echo "0"
}
get_uptime_god() {
    if pgrep -f xmrig >/dev/null; then
        local pid=$(pgrep -f xmrig)
        local uptime=$(ps -o etimes= -p $pid 2>/dev/null | xargs)
        echo "$((uptime / 3600))h $(((uptime % 3600) / 60))m $((uptime % 60))s"
    else
        echo "0h 0m 0s"
    fi
}

# ----------------------------------------------------------------------------
# BENCHMARK DE CPU (N√çVEL DEUS)
# ----------------------------------------------------------------------------
benchmark_cpu_god() {
    clear
    echo -e "${COLOR_BENCH}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo -e "${COLOR_BENCH}               BENCHMARK DE CPU - MODO DEUS                          ${NC}"
    echo -e "${COLOR_BENCH}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo ""
    echo "Executando benchmark de CPU por 60 segundos..."
    echo ""

    if [ ! -f "$MINER_BIN/xmrig" ]; then
        log_error "XMRig n√£o encontrado. Instale primeiro (op√ß√£o 9)."
        safe_read "Pressione Enter..." dummy
        return 1
    fi

    cd "$MINER_TEMP"
    echo "Benchmark em andamento... (n√£o interrompa)"
    "$MINER_BIN/xmrig" --benchmark=1M --print-time=10 --no-color > /tmp/benchmark_cpu.log 2>&1 &
    local bench_pid=$!
    
    local elapsed=0
    while kill -0 $bench_pid 2>/dev/null && [ $elapsed -lt 70 ]; do
        echo -ne "\rTempo decorrido: ${elapsed}s | $(tail -1 /tmp/benchmark_cpu.log 2>/dev/null | cut -c1-50)"
        sleep 1
        ((elapsed++))
    done

    kill $bench_pid 2>/dev/null
    wait $bench_pid 2>/dev/null

    local hashrate=$(grep -oE '[0-9]+\.[0-9]+ H/s' /tmp/benchmark_cpu.log | tail -1 | cut -d' ' -f1)
    if [ -z "$hashrate" ]; then
        hashrate="0.00"
    fi

    echo ""
    echo ""
    echo "‚úÖ Benchmark conclu√≠do!"
    echo "üìä Hashrate estimado: ${hashrate} H/s"
    echo ""
    echo "$(date '+%Y-%m-%d %H:%M:%S'),$hashrate" >> "$MINER_LOGS/benchmark_cpu.log"
    
    discord_benchmark_complete "$hashrate" "N/A" "N/A" "$hashrate" "N/A"
    safe_read "Pressione Enter..." dummy
}

# ----------------------------------------------------------------------------
# DIAGN√ìSTICO COMPLETO DO SISTEMA (15+ VERIFICA√á√ïES)
# ----------------------------------------------------------------------------
system_diagnostics_god() {
    clear
    echo -e "${COLOR_DIAG}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo -e "${COLOR_DIAG}                 DIAGN√ìSTICO COMPLETO - MODO DEUS                    ${NC}"
    echo -e "${COLOR_DIAG}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo ""

    local issues=0

    # 1. Termux
    echo -n "üì± Termux detectado: "
    if [ -d "/data/data/com.termux" ]; then
        echo -e "${COLOR_SUCCESS}‚úÖ${NC}"
    else
        echo -e "${COLOR_ERROR}‚ùå${NC}"
        ((issues++))
    fi

    # 2. Armazenamento
    echo -n "üíæ Armazenamento: "
    if [ -d "/sdcard" ]; then
        echo -e "${COLOR_SUCCESS}‚úÖ (montado)${NC}"
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  (n√£o montado)${NC}"
    fi

    # 3. Internet
    echo -n "üåê Internet: "
    if ping -c 1 8.8.8.8 >/dev/null 2>&1; then
        echo -e "${COLOR_SUCCESS}‚úÖ${NC}"
    else
        echo -e "${COLOR_ERROR}‚ùå${NC}"
        ((issues++))
    fi

    # 4. Reposit√≥rios Termux
    echo -n "üì¶ Reposit√≥rios Termux: "
    if pkg update -y -o Dpkg::Options::="--force-confnew" > /dev/null 2>&1; then
        echo -e "${COLOR_SUCCESS}‚úÖ${NC}"
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  (corrigindo...)${NC}"
        fix_termux_repos
        ((issues++))
    fi

    # 5. XMRig bin√°rio
    echo -n "‚öôÔ∏è  XMRig: "
    if [ -f "$MINER_BIN/xmrig" ]; then
        if verify_xmrig_binary "$MINER_BIN/xmrig"; then
            local ver=$("$MINER_BIN/xmrig" --version 2>/dev/null | head -1 | grep -oE '[0-9]+\.[0-9]+\.[0-9]+' || echo "desconhecida")
            echo -e "${COLOR_SUCCESS}‚úÖ (v$ver)${NC}"
        else
            echo -e "${COLOR_ERROR}‚ùå (bin√°rio corrompido)${NC}"
            ((issues++))
        fi
    else
        echo -e "${COLOR_ERROR}‚ùå (n√£o instalado)${NC}"
        ((issues++))
    fi

    # 6. Configura√ß√£o
    echo -n "‚öôÔ∏è  Configura√ß√£o: "
    if [ -f "$MINER_CONFIG/config.json" ]; then
        if jq . "$MINER_CONFIG/config.json" >/dev/null 2>&1; then
            echo -e "${COLOR_SUCCESS}‚úÖ${NC}"
        else
            echo -e "${COLOR_ERROR}‚ùå (JSON inv√°lido)${NC}"
            ((issues++))
        fi
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  (n√£o encontrada)${NC}"
    fi

    # 7. Processo minerador
    echo -n "üîÑ Minerador ativo: "
    if pgrep -f xmrig >/dev/null; then
        echo -e "${COLOR_SUCCESS}‚úÖ (PID $(pgrep -f xmrig))${NC}"
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  (inativo)${NC}"
    fi

    # 8. Auto pool
    echo -n "ü§ñ Auto pool: "
    if pgrep -f "pool_manager_god.sh" >/dev/null; then
        echo -e "${COLOR_SUCCESS}‚úÖ (ativo)${NC}"
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  (inativo)${NC}"
    fi

    # 9. Simulador satoshi
    echo -n "üí∞ Simulador satoshi: "
    if pgrep -f "satoshi_simulator_god.sh" >/dev/null; then
        echo -e "${COLOR_SUCCESS}‚úÖ (ativo)${NC}"
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  (inativo)${NC}"
    fi

    # 10. Monitor performance
    echo -n "üìä Monitor perf: "
    if pgrep -f "perf_monitor_god.sh" >/dev/null; then
        echo -e "${COLOR_SUCCESS}‚úÖ (ativo)${NC}"
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  (inativo)${NC}"
    fi

    # 11. Wake lock
    echo -n "‚ö° Wake lock: "
    if [ "$WAKE_LOCK_ACTIVE" = true ]; then
        echo -e "${COLOR_SUCCESS}‚úÖ (ativo)${NC}"
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  (inativo)${NC}"
    fi

    # 12. TLS/SSL
    echo -n "üîí TLS/SSL: "
    if [ "$TLS_ENABLED" = true ]; then
        echo -e "${COLOR_SUCCESS}‚úÖ (ativado)${NC}"
    else
        echo -e "${COLOR_INFO}‚ÑπÔ∏è  (desativado)${NC}"
    fi

    # 13. Carteira
    echo -n "üëõ Carteira: "
    if [ -n "$WALLET_ADDRESS" ]; then
        echo -e "${COLOR_SUCCESS}‚úÖ (${WALLET_ADDRESS:0:12}...)${NC}"
    else
        echo -e "${COLOR_ERROR}‚ùå (n√£o configurada)${NC}"
        ((issues++))
    fi

    # 14. Discord
    echo -n "üì® Discord Webhook: "
    if [ -n "$WEBHOOK_DISCORD" ] && [[ "$WEBHOOK_DISCORD" != *"example.com"* ]]; then
        echo -e "${COLOR_SUCCESS}‚úÖ${NC}"
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  (n√£o configurado)${NC}"
    fi

    # 15. Depend√™ncias
    echo -n "üì¶ Depend√™ncias: "
    local deps=("git" "cmake" "make" "wget" "curl" "unzip" "tar" "nc")
    local missing=0
    for dep in "${deps[@]}"; do
        if ! command -v $dep &>/dev/null; then
            missing=$((missing+1))
        fi
    done
    if [ $missing -eq 0 ]; then
        echo -e "${COLOR_SUCCESS}‚úÖ${NC}"
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  ($missing faltando)${NC}"
    fi

    echo ""
    echo -e "${COLOR_INFO}üìà ESTAT√çSTICAS DO SISTEMA:${NC}"
    echo "  ‚Ä¢ Satoshis acumulados: $(get_total_satoshis_god) sats"
    echo "  ‚Ä¢ Hashrate atual: $(get_current_hashrate_god) H/s"
    echo "  ‚Ä¢ Temperatura: $(get_current_temperature_god)¬∞C"
    echo "  ‚Ä¢ USD/hora: \$$(get_usd_per_hour_god)"
    echo "  ‚Ä¢ USD/dia: \$$(get_usd_per_day_god)"
    echo "  ‚Ä¢ BTC/dia: $(get_btc_per_day_god) BTC"
    echo "  ‚Ä¢ Efici√™ncia: $(get_efficiency_god)%"
    echo "  ‚Ä¢ Uptime: $(get_uptime_god)"
    echo "  ‚Ä¢ Threads CPU: $CPU_THREADS"
    echo "  ‚Ä¢ Prioridade CPU: $CPU_PRIORITY"
    echo "  ‚Ä¢ Modo ativo: $([ "$GOD_MODE_ACTIVE" = true ] && echo "DEUS" || ( [ "$TURBO_MODE_ACTIVE" = true ] && echo "TURBO" || ( [ "$ECO_MODE_ACTIVE" = true ] && echo "ECO" || echo "PADR√ÉO" ) ))"
    echo "  ‚Ä¢ Logs: $(find "$MINER_LOGS" -name "*.log" | wc -l) arquivos"
    echo "  ‚Ä¢ Espa√ßo em logs: $(du -sh "$MINER_LOGS" 2>/dev/null | cut -f1)"

    echo ""
    if [ $issues -eq 0 ]; then
        echo -e "${COLOR_SUCCESS}‚úÖ Sistema 100% pronto para minera√ß√£o!${NC}"
    else
        echo -e "${COLOR_WARNING}‚ö†Ô∏è  $issues problema(s) detectado(s). Execute a op√ß√£o 9 para corrigir.${NC}"
    fi
    echo ""
    echo -e "${COLOR_DIAG}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo ""
    safe_read "Pressione Enter para voltar..." dummy
}

# ----------------------------------------------------------------------------
# MODO ECO (ECONOMIA DE ENERGIA - 50% CPU)
# ----------------------------------------------------------------------------
enable_eco_mode() {
    log_eco "üåø Ativando Modo Eco (baixo consumo)..."
    CPU_MAX=50
    CPU_PRIORITY=0
    DONATE_LEVEL=0
    sed -i "s/\"cpu-max-threads-hint\": [0-9]*/\"cpu-max-threads-hint\": $CPU_MAX/" "$MINER_CONFIG/config.json" 2>/dev/null
    sed -i "s/\"priority\": [0-9\-]*/\"priority\": $CPU_PRIORITY/" "$MINER_CONFIG/config.json" 2>/dev/null
    ECO_MODE_ACTIVE=true
    TURBO_MODE_ACTIVE=false
    GOD_MODE_ACTIVE=false
    log_success "üåø Modo Eco ativado (CPU: 50%, Prioridade: 0)"
    discord_send "üåø **MODO ECO ATIVADO** üåø\n\nConsumo de energia reduzido para m√°xima efici√™ncia." "3066993" "üåø MODO ECO"
    restart_mining_god
}

# ----------------------------------------------------------------------------
# MODO TURBO (M√ÅXIMO DESEMPENHO - 100% CPU)
# ----------------------------------------------------------------------------
enable_turbo_mode() {
    log_turbo "‚ö° Ativando Modo Turbo (m√°ximo desempenho)..."
    CPU_MAX=100
    CPU_PRIORITY=-10
    DONATE_LEVEL=0
    sed -i "s/\"cpu-max-threads-hint\": [0-9]*/\"cpu-max-threads-hint\": $CPU_MAX/" "$MINER_CONFIG/config.json" 2>/dev/null
    sed -i "s/\"priority\": [0-9\-]*/\"priority\": $CPU_PRIORITY/" "$MINER_CONFIG/config.json" 2>/dev/null
    ECO_MODE_ACTIVE=false
    TURBO_MODE_ACTIVE=true
    GOD_MODE_ACTIVE=false
    log_success "‚ö° Modo Turbo ativado (CPU: 100%, Prioridade: -10)"
    discord_send "‚ö° **MODO TURBO ATIVADO** ‚ö°\n\nDesempenho m√°ximo ativado! Acompanhe a temperatura." "15158332" "‚ö° MODO TURBO"
    restart_mining_god
}

# ----------------------------------------------------------------------------
# MODO DEUS (OTIMIZA√á√ÉO TOTAL - PRIORIDADE M√ÅXIMA)
# ----------------------------------------------------------------------------
enable_god_mode() {
    log_god "üî• ATIVANDO MODO DEUS üî•"
    CPU_MAX=100
    CPU_PRIORITY=-20
    DONATE_LEVEL=0
    sed -i "s/\"cpu-max-threads-hint\": [0-9]*/\"cpu-max-threads-hint\": $CPU_MAX/" "$MINER_CONFIG/config.json" 2>/dev/null
    sed -i "s/\"priority\": [0-9\-]*/\"priority\": $CPU_PRIORITY/" "$MINER_CONFIG/config.json" 2>/dev/null
    ECO_MODE_ACTIVE=false
    TURBO_MODE_ACTIVE=false
    GOD_MODE_ACTIVE=true
    log_success "üî• MODO DEUS ATIVADO! (CPU: 100%, Prioridade: -20) üî•"
    discord_send "üî• **MODO DEUS ATIVADO** üî•\n\nO sistema atingiu seu potencial m√°ximo. Que os deuses da minera√ß√£o estejam com voc√™!" "16753920" "üî• MODO DEUS"
    restart_mining_god
}

# ----------------------------------------------------------------------------
# ATIVAR/DESATIVAR TLS/SSL
# ----------------------------------------------------------------------------
toggle_tls() {
    if [ "$TLS_ENABLED" = true ]; then
        TLS_ENABLED=false
        log_tls "üîì TLS/SSL desativado"
        discord_send "üîì **TLS/SSL DESATIVADO**" "3447003" "üîì TLS OFF"
    else
        TLS_ENABLED=true
        log_tls "üîí TLS/SSL ativado - conex√µes criptografadas"
        discord_send "üîí **TLS/SSL ATIVADO**" "5763719" "üîí TLS ON"
    fi
    
    # Reconfigura minerador com nova op√ß√£o TLS
    if [ -f "$MINER_CONFIG/config.json" ]; then
        sed -i "s/\"tls\": .*,/\"tls\": $TLS_ENABLED,/" "$MINER_CONFIG/config.json"
    fi
    
    restart_mining_god
}

# ----------------------------------------------------------------------------
# ATIVAR/DESATIVAR WAKE LOCK
# ----------------------------------------------------------------------------
toggle_wake_lock() {
    if [ "$WAKE_LOCK_ACTIVE" = true ]; then
        disable_wake_lock
    else
        enable_wake_lock
    fi
}

# ----------------------------------------------------------------------------
# STATUS COMPLETO (N√çVEL DEUS)
# ----------------------------------------------------------------------------
show_full_status_god() {
    clear
    echo -e "${COLOR_GOD}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo -e "${COLOR_GOD}                STATUS COMPLETO DO SISTEMA - MODO DEUS               ${NC}"
    echo -e "${COLOR_GOD}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo ""

    if pgrep -f xmrig >/dev/null 2>&1; then
        echo -e "${COLOR_SUCCESS}‚ñ∂ MINERA√á√ÉO: ${GREEN}ATIVA (MODO DEUS)${NC}"
        echo "  PID: $(pgrep -f xmrig)"
        echo "  Uptime: $(get_uptime_god)"
        echo ""
        echo -e "${COLOR_INFO}üìã CONFIGURA√á√ÉO DIVINA:${NC}"
        [ -f "$MINER_CONFIG/worker.info" ] && cat "$MINER_CONFIG/worker.info"
        echo ""
        echo -e "${COLOR_HASHRATE}‚ö° ESTAT√çSTICAS DE MINERA√á√ÉO:${NC}"
        echo "  Hashrate atual: $(get_current_hashrate_god) H/s"
        echo "  Temperatura: $(get_current_temperature_god)¬∞C"
        echo "  Satoshis acumulados: $(get_total_satoshis_god) sats"
        echo "  USD/hora: \$$(get_usd_per_hour_god)"
        echo "  USD/dia: \$$(get_usd_per_day_god)"
        echo "  BTC/dia: $(get_btc_per_day_god) BTC"
        echo "  Efici√™ncia: $(get_efficiency_god)%"
        echo "  Shares totais: $(get_total_shares_god)"
        echo ""
        
        local btc=$(echo "scale=8; $(get_total_satoshis_god) / 100000000" | bc 2>/dev/null || echo "0")
        local usd=$(echo "scale=2; $btc * 45000" | bc 2>/dev/null || echo "0")
        echo -e "${COLOR_BITCOIN}üí∞ GANHOS EM BITCOIN:${NC}"
        echo "  Satoshis: $(get_total_satoshis_god) sats"
        echo "  Bitcoin: $btc BTC"
        echo "  Valor USD: \$$usd"
        
        local current_pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)
        local current_latency=$(test_pool_latency "$current_pool")
        echo ""
        echo -e "${COLOR_POOL}üåê POOL ATUAL:${NC}"
        echo "  $current_pool"
        echo "  Lat√™ncia: ${current_latency}ms"
        
        echo ""
        echo -e "${COLOR_GOD}üî• MODO ATIVO:${NC}"
        if [ "$GOD_MODE_ACTIVE" = true ]; then
            echo "  DEUS (m√°ximo desempenho, prioridade -20)"
        elif [ "$TURBO_MODE_ACTIVE" = true ]; then
            echo "  TURBO (alto desempenho, prioridade -10)"
        elif [ "$ECO_MODE_ACTIVE" = true ]; then
            echo "  ECO (economia, 50% CPU)"
        else
            echo "  PADR√ÉO"
        fi
        
        echo ""
        echo -e "${COLOR_TLS}üîí TLS/SSL: $([ "$TLS_ENABLED" = true ] && echo "ATIVADO" || echo "desativado")${NC}"
        echo -e "${COLOR_WAKE}‚ö° Wake lock: $([ "$WAKE_LOCK_ACTIVE" = true ] && echo "ATIVADO" || echo "desativado")${NC}"
        
    else
        echo -e "${COLOR_ERROR}‚ñ∂ MINERA√á√ÉO: INATIVA${NC}"
    fi
    echo ""
    safe_read "Pressione Enter para voltar..." dummy
}

# ----------------------------------------------------------------------------
# DASHBOARD EM TEMPO REAL (EXATAMENTE COMO NA IMAGEM - VERS√ÉO DEUS)
# ----------------------------------------------------------------------------
realtime_dashboard_god() {
    while true; do
        clear
        echo -e "${COLOR_GOD}‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó${NC}"
        echo -e "${COLOR_GOD}‚ïë                    DASHBOARD EM TEMPO REAL - MODO DEUS             ‚ïë${NC}"
        echo -e "${COLOR_GOD}‚ïë                        $(date '+%H:%M:%S')                                    ‚ïë${NC}"
        echo -e "${COLOR_GOD}‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù${NC}"
        echo ""
        if pgrep -f xmrig >/dev/null; then
            echo -e "${COLOR_SATOSHI}"
            echo "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
            echo "‚ïë                      MINERA√á√ÉO ATIVA - MODO DEUS                     ‚ïë"
            echo "‚ï†‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ï£"
            printf "‚ïë  ‚è∞ Hora: %-50s ‚ïë\n" "$(date '+%H:%M:%S')"
            printf "‚ïë  ‚ö° Hashrate: %-48s ‚ïë\n" "$(get_current_hashrate_god) H/s"
            printf "‚ïë  üå°Ô∏è  Temperatura: %-46s ‚ïë\n" "$(get_current_temperature_god)¬∞C"
            printf "‚ïë  üí∞ Satoshis nesta sess√£o: %-38s ‚ïë\n" "$(get_total_satoshis_god) sats"
            printf "‚ïë  üìä √öltima minera√ß√£o: %-40s ‚ïë\n" "$(tail -1 "$MINER_LOGS/satoshi_instant.log" 2>/dev/null | grep -o '[0-9]\+ sats' | head -1) satoshis"
            echo "‚ï†‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ï£"
            printf "‚ïë  üìà Total Acumulado: %-43s ‚ïë\n" "$(get_total_satoshis_god) satoshis"
            printf "‚ïë  üíµ USD/hora: %-50s ‚ïë\n" "\$$(get_usd_per_hour_god)"
            printf "‚ïë  üíµ USD/dia: %-51s ‚ïë\n" "\$$(get_usd_per_day_god)"
            printf "‚ïë  ‚Çø BTC/dia: %-51s ‚ïë\n" "$(get_btc_per_day_god) BTC"
            printf "‚ïë  üéØ Efici√™ncia: %-49s ‚ïë\n" "$(get_efficiency_god)%"
            echo "‚ï†‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ï£"
            printf "‚ïë  üîß Algoritmo: %-50s ‚ïë\n" "$(grep "^ALGORITHM=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2 || echo 'RandomX')"
            printf "‚ïë  üåê Pool: %-56s ‚ïë\n" "$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2 | cut -d. -f1-2 || echo 'pool.supportxmr.com')"
            printf "‚ïë  üÜî Worker: %-54s ‚ïë\n" "$(grep "^WORKER_ID=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2 | head -c16 || echo 'god_miner')..."
            echo "‚ï†‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ï£"
            printf "‚ïë  üîí TLS: %-57s ‚ïë\n" "$([ "$TLS_ENABLED" = true ] && echo "ATIVADO" || echo "desativado")"
            printf "‚ïë  ‚ö° Wake lock: %-53s ‚ïë\n" "$([ "$WAKE_LOCK_ACTIVE" = true ] && echo "ATIVADO" || echo "desativado")"
            printf "‚ïë  üéÆ Modo: %-57s ‚ïë\n" "$([ "$GOD_MODE_ACTIVE" = true ] && echo "DEUS" || ( [ "$TURBO_MODE_ACTIVE" = true ] && echo "TURBO" || ( [ "$ECO_MODE_ACTIVE" = true ] && echo "ECO" || echo "PADR√ÉO" )))"
            echo "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
            echo -e "${NC}"
        else
            echo -e "${COLOR_ERROR}"
            echo "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
            echo "‚ïë                      MINERA√á√ÉO INATIVA - MODO DEUS                  ‚ïë"
            echo "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
            echo -e "${NC}"
        fi
        echo ""
        echo -e "${COLOR_WARNING}Pressione Q para voltar ao menu...${NC}"
        safe_read -t 5 -n 1 key dummy
        [[ "$key" == "q" || "$key" == "Q" ]] && break
    done
}

# ----------------------------------------------------------------------------
# GANHOS EM BITCOIN (N√çVEL DEUS)
# ----------------------------------------------------------------------------
show_bitcoin_earnings_god() {
    clear
    echo -e "${COLOR_BITCOIN}‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó${NC}"
    echo -e "${COLOR_BITCOIN}‚ïë                    GANHOS EM BITCOIN - MODO DEUS                   ‚ïë${NC}"
    echo -e "${COLOR_BITCOIN}‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù${NC}"
    echo ""
    local sats=$(get_total_satoshis_god)
    local btc=$(echo "scale=8; $sats / 100000000" | bc)
    local usd=$(echo "scale=2; $btc * 45000" | bc)
    local usd_hour=$(get_usd_per_hour_god)
    local usd_day=$(get_usd_per_day_god)
    local usd_month=$(echo "scale=2; $usd_day * 30" | bc)
    local usd_year=$(echo "scale=2; $usd_day * 365" | bc)
    local efficiency=$(get_efficiency_god)
    
    echo "üìä RESUMO DE GANHOS:"
    echo "‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê"
    echo ""
    echo "  üí∞ Satoshis acumulados: $sats sats"
    echo "  ‚Çø Bitcoin equivalente: $btc BTC"
    echo "  üíµ Valor USD atual: \$$usd"
    echo ""
    echo "üìà ESTIMATIVAS (baseado no hashrate atual):"
    echo "  ‚Ä¢ USD/hora: \$$usd_hour"
    echo "  ‚Ä¢ USD/dia: \$$usd_day"
    echo "  ‚Ä¢ USD/m√™s: \$$usd_month"
    echo "  ‚Ä¢ USD/ano: \$$usd_year"
    echo ""
    echo "‚ö° EFICI√äNCIA:"
    echo "  ‚Ä¢ Hashrate atual: $(get_current_hashrate_god) H/s"
    echo "  ‚Ä¢ Temperatura: $(get_current_temperature_god)¬∞C"
    echo "  ‚Ä¢ Efici√™ncia: ${efficiency}%"
    echo ""
    echo "üëõ PAGAMENTOS:"
    echo "  ‚Ä¢ Carteira principal: $WALLET_ADDRESS"
    echo "  ‚Ä¢ Carteira backup: $WALLET_BACKUP"
    echo "  ‚Ä¢ Status: Acumulando para saque (m√≠nimo 0.001 BTC)"
    echo ""
    safe_read "Pressione Enter..." dummy
}

# ----------------------------------------------------------------------------
# LOGS DE SATOSHIS (N√çVEL DEUS)
# ----------------------------------------------------------------------------
view_satoshi_logs_god() {
    clear
    echo -e "${COLOR_SATOSHI}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo -e "${COLOR_SATOSHI}                  LOGS COMPLETOS DE SATOSHIS - MODO DEUS           ${NC}"
    echo -e "${COLOR_SATOSHI}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo ""
    if [ -f "$MINER_LOGS/satoshi_instant.log" ]; then
        echo "√öLTIMOS 30 EVENTOS:"
        echo "‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ"
        tail -30 "$MINER_LOGS/satoshi_instant.log"
        echo "‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ"
        
        local total=$(grep "Quantidade:" "$MINER_LOGS/satoshi_instant.log" | awk '{sum+=$2} END {print sum}')
        local hoje=$(grep "$(date '+%Y-%m-%d')" "$MINER_LOGS/satoshi_instant.log" | grep "Quantidade:" | awk '{sum+=$2} END {print sum}')
        local media=$(echo "scale=2; $total / $(grep -c "Quantidade:" "$MINER_LOGS/satoshi_instant.log")" | bc 2>/dev/null || echo "0")
        
        echo ""
        echo "üìä ESTAT√çSTICAS:"
        echo "  ‚Ä¢ Total de satoshis: ${total:-0} sats"
        echo "  ‚Ä¢ Satoshis hoje: ${hoje:-0} sats"
        echo "  ‚Ä¢ M√©dia por evento: ${media:-0} sats"
    else
        echo "Nenhum log de satoshi encontrado."
    fi
    echo ""
    safe_read "Pressione Enter..." dummy
}

# ----------------------------------------------------------------------------
# RELAT√ìRIO DI√ÅRIO (N√çVEL DEUS)
# ----------------------------------------------------------------------------
daily_report_god() {
    clear
    local sats=$(get_total_satoshis_god)
    local shares=$(get_total_shares_god)
    local btc=$(echo "scale=8; $sats / 100000000" | bc)
    local usd=$(echo "scale=2; $btc * 45000" | bc)
    local uptime_seconds=$(ps -o etimes= -p $(pgrep -f xmrig) 2>/dev/null | xargs)
    local hours=$((uptime_seconds / 3600))
    local hashrate_avg=$(get_current_hashrate_god)
    local temp_avg=$(get_current_temperature_god)
    local efficiency=$(get_efficiency_god)

    echo -e "${COLOR_TITLE}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo -e "${COLOR_TITLE}                 RELAT√ìRIO DI√ÅRIO - MODO DEUS                        ${NC}"
    echo -e "${COLOR_TITLE}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo ""
    echo "  üìÖ Data: $(date '+%d/%m/%Y %H:%M:%S')"
    echo "  ‚è±Ô∏è  Tempo ativo (sess√£o): $hours horas"
    echo ""
    echo "  üí∞ SATOSHIS:"
    echo "    ‚Ä¢ Minerados hoje: $sats sats"
    echo "    ‚Ä¢ Bitcoin gerado: $btc BTC"
    echo "    ‚Ä¢ Valor USD: \$$usd"
    echo ""
    echo "  üìä DESEMPENHO:"
    echo "    ‚Ä¢ Shares aceitos: $shares"
    echo "    ‚Ä¢ Hashrate m√©dio: $hashrate_avg H/s"
    echo "    ‚Ä¢ Temperatura m√©dia: $temp_avg¬∞C"
    echo "    ‚Ä¢ Efici√™ncia m√©dia: $efficiency%"
    echo ""
    echo "  üëõ CARTEIRA:"
    echo "    ‚Ä¢ $WALLET_ADDRESS"
    echo ""
    echo "  üîí TLS: $([ "$TLS_ENABLED" = true ] && echo "Ativado" || echo "Desativado")"
    echo "  ‚ö° Wake lock: $([ "$WAKE_LOCK_ACTIVE" = true ] && echo "Ativado" || echo "Desativado")"
    echo "  üéÆ Modo: $([ "$GOD_MODE_ACTIVE" = true ] && echo "DEUS" || ( [ "$TURBO_MODE_ACTIVE" = true ] && echo "TURBO" || ( [ "$ECO_MODE_ACTIVE" = true ] && echo "ECO" || echo "PADR√ÉO" )))"
    echo ""
    echo -e "${COLOR_TITLE}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    
    discord_daily_report_god "$sats" "$shares" "$hours" "$btc" "$usd" "$hashrate_avg" "$temp_avg" "$efficiency"
    safe_read "Pressione Enter..." dummy
}

# ----------------------------------------------------------------------------
# CONFIGURA√á√ïES (N√çVEL DEUS) ‚Äì OP√á√ïES 6 E 7 REMOVIDAS (CARTEIRA/WEBHOOK FIXOS)
# ----------------------------------------------------------------------------
config_menu_god() {
    while true; do
        clear
        echo -e "${COLOR_MENU}‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó${NC}"
        echo -e "${COLOR_MENU}‚ïë                    CONFIGURA√á√ïES - MODO DEUS                       ‚ïë${NC}"
        echo -e "${COLOR_MENU}‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù${NC}"
        echo ""
        echo "1) Alterar threads da CPU (atual: $CPU_THREADS)"
        echo "2) Alterar prioridade da CPU (atual: $CPU_PRIORITY)"
        echo "3) Alterar limite de uso da CPU (atual: $CPU_MAX%)"
        echo "4) Ver configura√ß√£o atual do minerador"
        echo "5) Recriar configura√ß√£o padr√£o (com melhor pool)"
        echo "6) ‚ö° Wake lock (ativar/desativar)"
        echo "7) üîí TLS/SSL (ativar/desativar)"
        echo "8) üí∞ Doar 1% para o projeto XMRig (ativar/desativar)"
        echo "9) üìä Resetar estat√≠sticas (zerar satoshis/shares)"
        echo "10) üßπ Limpar cache de pools"
        echo "11) üîß Otimizar configura√ß√£o para esta CPU"
        echo "12) Voltar"
        echo ""
        safe_read "Escolha: " cfg_choice

        case $cfg_choice in
            1)
                safe_read "Novo n√∫mero de threads (max $(nproc)): " t
                if [[ "$t" =~ ^[0-9]+$ ]] && [ "$t" -ge 1 ] && [ "$t" -le $(nproc) ]; then
                    CPU_THREADS="$t"
                    sed -i "s/\"cpu-max-threads-hint\": [0-9]*/\"cpu-max-threads-hint\": $t/" "$MINER_CONFIG/config.json" 2>/dev/null
                    log_success "Threads atualizadas para $t"
                fi
                ;;
            2)
                safe_read "Nova prioridade (-20 a 19): " p
                if [[ "$p" =~ ^-?[0-9]+$ ]] && [ "$p" -ge -20 ] && [ "$p" -le 19 ]; then
                    CPU_PRIORITY="$p"
                    sed -i "s/\"priority\": [0-9\-]*/\"priority\": $p/" "$MINER_CONFIG/config.json" 2>/dev/null
                    log_success "Prioridade atualizada para $p"
                fi
                ;;
            3)
                safe_read "Novo limite de uso da CPU (1-100): " m
                if [[ "$m" =~ ^[0-9]+$ ]] && [ "$m" -ge 1 ] && [ "$m" -le 100 ]; then
                    CPU_MAX="$m"
                    sed -i "s/\"cpu-max-threads-hint\": [0-9]*/\"cpu-max-threads-hint\": $m/" "$MINER_CONFIG/config.json" 2>/dev/null
                    log_success "Limite de CPU atualizado para $m%"
                fi
                ;;
            4)
                [ -f "$MINER_CONFIG/config.json" ] && cat "$MINER_CONFIG/config.json" | python3 -m json.tool 2>/dev/null || cat "$MINER_CONFIG/config.json"
                safe_read "Pressione Enter..." dummy
                ;;
            5)
                configure_miner_god
                ;;
            6)
                toggle_wake_lock
                ;;
            7)
                toggle_tls
                ;;
            8)
                if [ "$DONATE_LEVEL" -eq 0 ]; then
                    DONATE_LEVEL=1
                    log_success "Donate level ativado (1%) - Obrigado por apoiar o XMRig!"
                else
                    DONATE_LEVEL=0
                    log_success "Donate level desativado (0%)"
                fi
                sed -i "s/\"donate-level\": [0-9]*/\"donate-level\": $DONATE_LEVEL/" "$MINER_CONFIG/config.json" 2>/dev/null
                ;;
            9)
                echo "Resetando estat√≠sticas..."
                rm -f "$MINER_STATS"/*.sats 2>/dev/null
                echo "0" > "$MINER_STATS/total_satoshis"
                echo "0" > "$MINER_STATS/shares_total"
                log_success "Estat√≠sticas resetadas."
                ;;
            10)
                echo "Limpando cache de pools..."
                rm -f "$MINER_TEMP"/pool_test_* 2>/dev/null
                log_success "Cache de pools limpo."
                ;;
            11)
                log_sys "Otimizando configura√ß√£o para esta CPU..."
                # Auto-detecta melhor configura√ß√£o
                local cores=$(nproc)
                local threads=$((cores - 1))
                [ $threads -lt 1 ] && threads=1
                CPU_THREADS=$threads
                CPU_MAX=90
                sed -i "s/\"cpu-max-threads-hint\": [0-9]*/\"cpu-max-threads-hint\": $CPU_MAX/" "$MINER_CONFIG/config.json" 2>/dev/null
                log_success "Configura√ß√£o otimizada: $CPU_THREADS threads, $CPU_MAX%"
                ;;
            12) break ;;
        esac
    done
}

# ----------------------------------------------------------------------------
# BACKUP (N√çVEL DEUS)
# ----------------------------------------------------------------------------
backup_menu_god() {
    clear
    echo -e "${COLOR_INFO}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo -e "${COLOR_INFO}                    BACKUP E RESTORE - MODO DEUS                      ${NC}"
    echo -e "${COLOR_INFO}‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê${NC}"
    echo ""
    echo "1) Criar backup completo (configura√ß√£o + scripts + estat√≠sticas)"
    echo "2) Restaurar backup"
    echo "3) Listar backups"
    echo "4) Voltar"
    echo ""
    safe_read "Escolha: " bk_choice
    case $bk_choice in
        1)
            local backup_file="$MINER_BACKUP/backup_$(date +%Y%m%d_%H%M%S).tar.gz"
            tar -czf "$backup_file" "$MINER_CONFIG" "$MINER_SCRIPTS" "$MINER_STATS" 2>/dev/null
            echo "Backup criado: $backup_file"
            echo "$(date '+%Y-%m-%d %H:%M:%S') | $backup_file" >> "$MINER_LOGS/backup_history.log"
            log_success "Backup criado com sucesso!"
            ;;
        2)
            echo "Backups dispon√≠veis:"
            ls -1 "$MINER_BACKUP"/*.tar.gz 2>/dev/null | head -10
            safe_read "Digite o nome do arquivo (ex: backup_20250211_123456.tar.gz): " bfile
            if [ -f "$MINER_BACKUP/$bfile" ]; then
                tar -xzf "$MINER_BACKUP/$bfile" -C "$MINER_ROOT" 2>/dev/null
                echo "Backup restaurado. Reiniciando minera√ß√£o..."
                log_success "Backup restaurado com sucesso!"
                restart_mining_god
            else
                echo "Arquivo n√£o encontrado."
            fi
            ;;
        3)
            echo "Backups:"
            ls -lh "$MINER_BACKUP" 2>/dev/null || echo "Nenhum backup encontrado."
            ;;
        4) return ;;
    esac
    safe_read "Pressione Enter..." dummy
}

# ----------------------------------------------------------------------------
# LIMPAR LOGS (N√çVEL DEUS)
# ----------------------------------------------------------------------------
clear_logs_god() {
    echo ""
    echo -e "${COLOR_WARNING}Tem certeza que deseja limpar TODOS os logs? (s/N): ${NC}"
    safe_read "" confirm
    if [[ "$confirm" == "s" || "$confirm" == "S" ]]; then
        for f in "$MINER_LOGS"/*.log; do
            > "$f" 2>/dev/null
        done
        log_success "Todos os logs foram limpos (Modo Deus)."
    else
        log_sys "Opera√ß√£o cancelada."
    fi
    safe_read "Pressione Enter..." dummy
}

