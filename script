# ---------- TRAP DE SA√çDA ----------
clean_exit() {
    echo -e "\n${COLOR_WARNING}üõë Encerrando XMRig Miner God...${NC}"
    stop_auto_pool
    stop_watchdog
    stop_mining
    exit 0
}
trap clean_exit SIGINT SIGTERM

