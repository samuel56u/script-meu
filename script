#!/data/data/com.termux/files/usr/bin/bash

# ============================================================================
# XMRIG MINER GOD - TERMUX ULTIMATE EDITION v99.9 - MODO AUTOMÃTICO
# ============================================================================
#   VersÃ£o corrigida: temperatura com fallback, hashrate real, sem erros.
# ============================================================================

# ConfiguraÃ§Ãµes fixas
WALLET_ADDRESS="bc1qtz2j3ky2nh409w432wh8uyqphhny84a3qhs2tl"
WEBHOOK_DISCORD="https://discord.com/api/webhooks/1470009252063088661/1j4kNu2sDcGQmFCywnbd_p1BEbb1DTcN_VXt5OYpX8_FsQI2YKB3tCjS2Okp_msUX9Mh"

# DiretÃ³rios
MINER_ROOT="/data/data/com.termux/files/home/.xmrig_god_final"
MINER_BIN="$MINER_ROOT/bin"
MINER_CONFIG="$MINER_ROOT/config"
MINER_LOGS="$MINER_ROOT/logs"
MINER_STATS="$MINER_ROOT/stats"
MINER_TEMP="$MINER_ROOT/temp"
mkdir -p "$MINER_BIN" "$MINER_CONFIG" "$MINER_LOGS" "$MINER_STATS" "$MINER_TEMP"

# Arquivos de log
touch "$MINER_LOGS"/{system.log,miner.log,error.log,discord.log,satoshi.log,hashrate.log,xmrig_raw.log,shares_history.log}

# ConfiguraÃ§Ãµes iniciais
CPU_THREADS=$(($(nproc 2>/dev/null || echo 2) - 1))
[ $CPU_THREADS -lt 1 ] && CPU_THREADS=1
CPU_PRIORITY=5
CPU_MAX=75
TLS_ENABLED=false
DONATE_LEVEL=0

# Cores
NC='\033[0m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
CYAN='\033[0;36m'
PURPLE='\033[0;35m'

# Lista de pools
POOLS=(
    "randomxmonero.auto.nicehash.com:9200"
    "pool.supportxmr.com:3333"
    "gulf.moneroocean.stream:10001"
)

# FunÃ§Ãµes de log
log_info() { echo -e "${CYAN}[INFO]${NC} $1" >> "$MINER_LOGS/system.log"; echo -e "${CYAN}[INFO]${NC} $1"; }
log_ok()   { echo -e "${GREEN}[OK]${NC} $1"   >> "$MINER_LOGS/system.log"; echo -e "${GREEN}[OK]${NC} $1"; }
log_warn() { echo -e "${YELLOW}[WARN]${NC} $1" >> "$MINER_LOGS/system.log"; echo -e "${YELLOW}[WARN]${NC} $1"; }
log_error(){ echo -e "${RED}[ERROR]${NC} $1" >> "$MINER_LOGS/system.log"; echo -e "${RED}[ERROR]${NC} $1"; }

# Discord
discord_send() {
    [ -z "$WEBHOOK_DISCORD" ] && return
    local msg="$1"
    local color="$2"
    local title="$3"
    local json="{\"embeds\":[{\"title\":\"$title\",\"description\":\"$msg\",\"color\":$color}]}"
    curl -s -H "Content-Type: application/json" -X POST -d "$json" "$WEBHOOK_DISCORD" -o /dev/null
}

# Detecta arquitetura
detect_arch() {
    case $(uname -m) in
        aarch64|arm64) echo "arm64" ;;
        armv7l|armhf)  echo "arm32" ;;
        *)             echo "unknown" ;;
    esac
}

# Verifica binÃ¡rio XMRig
verify_xmrig() {
    local bin="$1"
    [ ! -f "$bin" ] && return 1
    chmod +x "$bin" 2>/dev/null
    "$bin" --version >/dev/null 2>&1
}

# Wake lock
enable_wake_lock() {
    if command -v termux-wake-lock &>/dev/null; then
        termux-wake-lock
        log_ok "Wake lock ativado"
    fi
}

# Instala dependÃªncias
install_deps() {
    log_info "Verificando dependÃªncias..."
    pkg update -y >/dev/null 2>&1
    for pkg in curl wget nc git cmake make libuv libhwloc openssl unzip tar; do
        if ! command -v "$pkg" >/dev/null 2>&1; then
            pkg install -y "$pkg" >/dev/null 2>&1 && log_ok "$pkg instalado"
        fi
    done
}

# MÃ©todos de instalaÃ§Ã£o do XMRig (simplificados)
install_xmrig() {
    if [ -f "$MINER_BIN/xmrig" ] && verify_xmrig "$MINER_BIN/xmrig"; then
        log_ok "XMRig jÃ¡ estÃ¡ instalado"
        return 0
    fi
    log_info "Instalando XMRig..."
    cd "$MINER_TEMP"
    rm -f xmrig*
    local arch=$(detect_arch)
    local url=""
    if [ "$arch" = "arm64" ]; then
        url="https://github.com/xmrig/xmrig/releases/download/v6.21.0/xmrig-6.21.0-linux-arm64.tar.gz"
    else
        url="https://github.com/xmrig/xmrig/releases/download/v6.21.0/xmrig-6.21.0-linux-armhf.tar.gz"
    fi
    wget -q --timeout=30 "$url" -O xmrig.tar.gz
    tar -xzf xmrig.tar.gz
    local bin=$(find . -name xmrig -type f | head -1)
    if [ -n "$bin" ]; then
        cp "$bin" "$MINER_BIN/xmrig"
        chmod +x "$MINER_BIN/xmrig"
        if verify_xmrig "$MINER_BIN/xmrig"; then
            log_ok "XMRig instalado com sucesso"
            discord_send "âœ… XMRig instalado" "3066993" "InstalaÃ§Ã£o OK"
            return 0
        fi
    fi
    log_error "Falha na instalaÃ§Ã£o do XMRig"
    discord_send "âŒ Falha na instalaÃ§Ã£o" "15158332" "ERRO"
    exit 1
}

# Teste de latÃªncia
test_latency() {
    local host="${1%:*}"
    local port="${1##*:}"
    timeout 2 nc -z -w 2 "$host" "$port" 2>/dev/null && echo 100 || echo 9999
}

# Seleciona melhor pool
select_best_pool() {
    local best_pool="${POOLS[0]}" best_lat=9999
    for pool in "${POOLS[@]}"; do
        lat=$(test_latency "$pool")
        if [ "$lat" -lt "$best_lat" ]; then
            best_lat="$lat"
            best_pool="$pool"
        fi
    done
    echo "$best_pool"
}

# Configura o minerador
configure_miner() {
    local pool=$(select_best_pool)
    local worker="god_auto_$(date +%s)_$RANDOM"
    cat > "$MINER_CONFIG/config.json" << EOF
{
    "autosave": true,
    "cpu": true,
    "donate-level": $DONATE_LEVEL,
    "pools": [{
        "url": "$pool",
        "user": "$WALLET_ADDRESS.$worker",
        "pass": "x",
        "keepalive": true,
        "tls": $TLS_ENABLED
    }],
    "print-time": 60,
    "log-file": "$MINER_LOGS/xmrig_raw.log",
    "cpu-max-threads-hint": $CPU_MAX,
    "cpu-priority": $CPU_PRIORITY
}
EOF
    cat > "$MINER_CONFIG/worker.info" << EOF
WORKER=$worker
POOL=$pool
WALLET=$WALLET_ADDRESS
TLS=$TLS_ENABLED
EOF
    log_ok "Configurado com pool: $pool"
}

# FunÃ§Ãµes de estatÃ­sticas (com fallback)
get_hashrate() {
    local logfile="$MINER_LOGS/xmrig_raw.log"
    [ ! -s "$logfile" ] && logfile="$MINER_LOGS/miner.log"
    if [ -f "$logfile" ]; then
        local line=$(tail -n 50 "$logfile" 2>/dev/null | grep -E 'speed.*H/s' | tail -1)
        if [ -n "$line" ]; then
            echo "$line" | sed -E 's/.* ([0-9.]+) H\/s.*/\1 H\/s/'
        else
            echo "0 H/s"
        fi
    else
        echo "0 H/s"
    fi
}

get_hashrate_value() {
    get_hashrate | awk '{print $1}'
}

get_shares() {
    if [ -f "$MINER_LOGS/xmrig_raw.log" ]; then
        tail -n 100 "$MINER_LOGS/xmrig_raw.log" 2>/dev/null | grep -c 'accepted'
    else
        echo 0
    fi
}

get_temp() {
    # Fallback seguro para temperatura
    local temp_file="/sys/class/thermal/thermal_zone0/temp"
    if [ -f "$temp_file" ] && [ -r "$temp_file" ]; then
        local raw=$(cat "$temp_file" 2>/dev/null | tr -d '\n')
        if [[ "$raw" =~ ^[0-9]+$ ]]; then
            echo $((raw / 1000))
        else
            echo 0
        fi
    else
        echo 0
    fi
}

get_total_satoshis() {
    cat "$MINER_STATS/total_satoshis" 2>/dev/null || echo 0
}

# Atualiza estatÃ­sticas
update_stats() {
    local hashrate=$(get_hashrate_value)
    local temp=$(get_temp)
    local shares=$(get_shares)
    echo "$hashrate" > "$MINER_STATS/current_hashrate"
    echo "$temp" > "$MINER_STATS/current_temp"
    echo "$shares" > "$MINER_STATS/total_shares"
    echo "$(date '+%Y-%m-%d %H:%M:%S') | Shares: $shares | HR: $hashrate" >> "$MINER_LOGS/shares_history.log"
    echo "$hashrate" >> "$MINER_LOGS/hashrate.log"
}

# Log de satoshis
log_satoshi() {
    local current_shares=$(get_shares)
    local last_file="$MINER_STATS/last_shares"
    local last=0
    [ -f "$last_file" ] && last=$(cat "$last_file" 2>/dev/null || echo 0)
    local diff=$((current_shares - last))
    [ $diff -lt 0 ] && diff=0
    local sats=$((diff * 10))
    local total=$(($(get_total_satoshis) + sats))
    echo "$total" > "$MINER_STATS/total_satoshis"
    echo "$current_shares" > "$last_file"
    
    local hashrate=$(get_hashrate)
    local temp=$(get_temp)
    local timestamp="$(date '+%H:%M:%S')"
    echo "$timestamp | +$sats sats | HR: $hashrate | Temp: $tempÂ°C | Total: $total sats" >> "$MINER_LOGS/satoshi.log"
    
    # Notifica a cada 10 minutos
    if [ $(( $(date +%s) % 600 )) -lt 60 ]; then
        discord_send "ðŸ’° +$sats sats | HR: $hashrate | Total: $total sats" "16753920" "Satoshis"
    fi
}

# Inicia mineraÃ§Ã£o
start_mining() {
    if pgrep -f xmrig >/dev/null; then
        log_warn "MineraÃ§Ã£o jÃ¡ ativa"
        return
    fi
    install_xmrig
    [ ! -f "$MINER_CONFIG/config.json" ] && configure_miner
    enable_wake_lock
    echo "$(get_shares)" > "$MINER_STATS/last_shares"
    cd "$MINER_ROOT"
    nohup "$MINER_BIN/xmrig" -c "$MINER_CONFIG/config.json" >> "$MINER_LOGS/miner.log" 2>&1 &
    local pid=$!
    echo $pid > "$MINER_STATS/miner.pid"
    sleep 3
    if kill -0 $pid 2>/dev/null; then
        local pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)
        log_ok "MineraÃ§Ã£o iniciada (PID: $pid) | Pool: $pool"
        discord_send "ðŸš€ MineraÃ§Ã£o iniciada\nPool: $pool" "3066993" "InÃ­cio"
        # Loop de estatÃ­sticas em background
        (
            while kill -0 $pid 2>/dev/null; do
                update_stats
                log_satoshi
                sleep 60
            done
        ) &
        echo $! > "$MINER_STATS/stats_loop.pid"
    else
        log_error "Falha ao iniciar mineraÃ§Ã£o"
        discord_send "âŒ Falha ao iniciar" "15158332" "ERRO"
        exit 1
    fi
}

# Monitoramento
monitor() {
    log_info "Monitoramento iniciado. Pressione Ctrl+C para parar."
    while true; do
        clear
        echo -e "${PURPLE}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
        echo -e "${PURPLE}              XMRIG MINER GOD â€“ MODO AUTOMÃTICO v99.9${NC}"
        echo -e "${PURPLE}                         $(date '+%d/%m/%Y %H:%M:%S')${NC}"
        echo -e "${PURPLE}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
        echo ""
        if pgrep -f xmrig >/dev/null; then
            pid=$(pgrep -f xmrig)
            uptime_seconds=$(ps -o etimes= -p $pid 2>/dev/null | tail -1 | tr -d ' ')
            if [[ "$uptime_seconds" =~ ^[0-9]+$ ]]; then
                uptime_str="$((uptime_seconds/3600))h $(((uptime_seconds%3600)/60))m $((uptime_seconds%60))s"
            else
                uptime_str="0h 0m 0s"
            fi
            hashrate=$(get_hashrate)
            temp=$(get_temp)
            sats=$(get_total_satoshis)
            shares=$(get_shares)
            pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2 | cut -d. -f1-2)
            hashrate_val=$(get_hashrate_value)
            usd_hour=$(echo "scale=6; $hashrate_val * 0.00000001 * 45000 * 3600" | bc 2>/dev/null || echo "0")
            
            echo -e "${GREEN}â–¶ MineraÃ§Ã£o: ATIVA${NC}"
            echo "   PID: $pid"
            echo "   Uptime: $uptime_str"
            echo ""
            echo -e "${CYAN}âš¡ EstatÃ­sticas:${NC}"
            echo "   Hashrate: $hashrate"
            echo "   Temperatura: $tempÂ°C"
            echo "   Satoshis acumulados: $sats sats"
            echo "   Shares: $shares"
            echo "   USD/hora estimado: \$$usd_hour"
            echo ""
            echo -e "${CYAN}ðŸŒ Pool:${NC} ${pool:-N/A}"
            echo -e "${CYAN}ðŸ‘› Carteira:${NC} ${WALLET_ADDRESS:0:20}..."
        else
            echo -e "${RED}â–¶ MineraÃ§Ã£o: INATIVA${NC}"
        fi
        echo ""
        echo -e "${YELLOW}Monitoramento automÃ¡tico - Ctrl+C para encerrar${NC}"
        sleep 60
    done
}

# Trap de saÃ­da
clean_exit() {
    echo -e "\n${YELLOW}Encerrando...${NC}"
    pkill -f xmrig
    pkill -f stats_loop
    termux-wake-unlock 2>/dev/null
    discord_send "ðŸ›‘ MineraÃ§Ã£o encerrada" "15158332" "Parada"
    exit 0
}
trap clean_exit SIGINT SIGTERM

# ExecuÃ§Ã£o principal
clear
echo -e "${PURPLE}"
echo "â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—"
