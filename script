    clear
    echo -e "${COLOR_MENU}‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó${NC}"
    echo -e "${COLOR_MENU}‚ïë                            MENU PRINCIPAL                            ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ï†‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ï£${NC}"
    echo -e "${COLOR_MENU}‚ïë  1) üöÄ INICIAR MINERA√á√ÉO     2) üõë PARAR MINERA√á√ÉO                  ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë  3) üîÑ REINICIAR MINERA√á√ÉO   4) üìä STATUS COMPLETO                  ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë  5) üìà DASHBOARD             6) üìù LOGS DO MINERADOR                ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë  7) üí∞ GANHOS EM BITCOIN     8) ‚öôÔ∏è  CONFIGURA√á√ïES AVAN√áADAS         ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë  9) üîß INSTALAR XMRIG       10) üåê TROCAR POOL MANUAL               ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë 11) üëõ GERENCIAR CARTEIRAS  12) üì® TESTAR NOTIFICA√á√ïES              ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë 13) üßπ LIMPAR LOGS          14) üíæ BACKUP                           ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë 15) üîÑ RESTAURAR BACKUP     16) üìÇ SALVAR PERFIL ATUAL              ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë 17) üìÇ CARREGAR PERFIL      18) üîç VER HIST√ìRICO DE SHARES          ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë 19) üÜò AJUDA                20) üìä ESTAT√çSTICAS DETALHADAS          ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë  0) üö™ SAIR                                                       ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù${NC}"
    echo ""
    echo -e "   ${COLOR_WALLET}üëõ Carteira ativa: $(get_active_wallet | cut -c1-25)...${NC}"
    echo -e "   ${COLOR_DISCORD}üì® Discord: $([ "$ENABLE_DISCORD" = true ] && echo "‚úÖ" || echo "‚ùå") | Telegram: $([ "$ENABLE_TELEGRAM" = true ] && echo "‚úÖ" || echo "‚ùå") | Push: $([ "$ENABLE_PUSHOVER" = true ] && echo "‚úÖ" || echo "‚ùå")${NC}"
    if pgrep -f xmrig >/dev/null; then
        echo -e "   ${COLOR_SUCCESS}‚ñ∂ Minera√ß√£o: ATIVA | Hashrate: $(get_hashrate) | Temp: $(get_temp)¬∞C | Bat: $(get_battery)% | Sat: $(cat "$MINER_STATS/total_satoshis" 2>/dev/null || echo 0)${NC}"
        pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)
        echo -e "   üåê Pool: ${pool:-N/A} | Perfil: $ACTIVE_PROFILE"
    else
        echo -e "   ${COLOR_ERROR}‚ñ∂ Minera√ß√£o: INATIVA${NC}"
    fi
    echo ""
    printf "   Escolha uma op√ß√£o (0-20): "
    IFS= read -r choice
    choice=$(echo "$choice" | tr -cd '0-9')
    [ -z "$choice" ] && choice=99

    case $choice in
        0) clean_exit ;;
        1) start_mining ;;
        2) stop_mining ;;
        3) restart_mining ;;
        4) show_status ;;
        5) dashboard ;;
        6) show_logs ;;
        7) show_earnings ;;
        8) config_menu ;;
        9) install_xmrig ;;
        10) manual_pool ;;
        11) manage_wallets ;;
        12) test_notifications ;;
        13) clear_logs ;;
        14) backup ;;
        15) restore_backup ;;
        16) save_profile ;;
        17) load_profile ;;
        18) 
            clear
            echo -e "${COLOR_INFO}Hist√≥rico de shares:${NC}"
            cat "$MINER_LOGS/satoshi.log" 2>/dev/null || echo "Nenhum hist√≥rico."
            echo ""
            safe_read "Pressione Enter..." _
            ;;
        19) show_help ;;
        20) 
            clear
            echo -e "${COLOR_INFO}Estat√≠sticas detalhadas:${NC}"
            echo "   Total de shares: $(get_shares)"
            echo "   Total de satoshis: $(cat "$MINER_STATS/total_satoshis" 2>/dev/null || echo 0)"
            echo "   M√©dia de hashrate: $(awk '{sum+=$1; count++} END {if(count>0) printf "%.2f H/s", sum/count}' "$MINER_STATS/hashrate_history" 2>/dev/null || echo "0 H/s")"
            echo "   Temperatura m√°xima: $(sort -n "$MINER_LOGS/temp.log" 2>/dev/null | tail -1 || echo "0")¬∞C"
            echo "   Bateria m√≠nima: $(sort -n "$MINER_LOGS/battery.log" 2>/dev/null | head -1 || echo "0")%"
            echo ""
            safe_read "Pressione Enter..." _
            ;;
        *) 
            echo -e "${COLOR_ERROR}   ‚ùå Op√ß√£o inv√°lida! Digite apenas n√∫meros.${NC}"
            sleep 1
            ;;
    esac
    if [ "$choice" != "5" ]; then
        echo ""
        printf "Pressione Enter para continuar..."
        read -r
    fi
done
