    "cn/upx2"                # CryptoNight Uplexa 2
    "cn-heavy/xhv"           # CryptoNight Heavy (Haven)
    "cn-pico"                # CryptoNight Pico (TurtleCoin)
    "cn-pico/tlo"            # CryptoNight Pico TLO
    "argon2/chukwav2"        # Argon2 Chukwa V2 (TurtleCoin)
    "astrobwt"               # AstroBWT (DERO)
    "astrobwt/v2"            # AstroBWT V2 (DERO)
)

# ----------------------------------------------------------------------------
# FUN√á√ÉO DE DETEC√á√ÉO DE ARQUITETURA
# ----------------------------------------------------------------------------
detect_architecture() {
    local ARCH=$(uname -m)
    local ARCH_TYPE=""
    local ARCH_BITS=""
    
    case "$ARCH" in
        aarch64|arm64|armv8*)
            ARCH_TYPE="arm64"
            ARCH_BITS="64"
            ;;
        armhf|armv7*|armv8l|arm)
            ARCH_TYPE="arm32"
            ARCH_BITS="32"
            ;;
        x86_64|amd64)
            ARCH_TYPE="x64"
            ARCH_BITS="64"
            ;;
        i*86|x86)
            ARCH_TYPE="x86"
            ARCH_BITS="32"
            ;;
        *)
            ARCH_TYPE="unknown"
            ARCH_BITS="unknown"
            ;;
    esac
    
    echo "$ARCH_TYPE|$ARCH_BITS|$ARCH"
}

# ----------------------------------------------------------------------------
# FUN√á√ÉO DE WAKE LOCK (EVITA MODO DE ECONOMIA)
# ----------------------------------------------------------------------------
enable_wake_lock() {
    if command -v termux-wake-lock &>/dev/null; then
        termux-wake-lock
        WAKE_LOCK_ACTIVE=true
        log_wake "‚úÖ Wake lock ativado - CPU n√£o entrar√° em modo de economia"
        return 0
    else
        log_warn "termux-wake-lock n√£o encontrado. Instale com: pkg install termux-api"
        return 1
    fi
}

disable_wake_lock() {
    if command -v termux-wake-unlock &>/dev/null; then
        termux-wake-unlock
        WAKE_LOCK_ACTIVE=false
        log_wake "Wake lock desativado"
        return 0
    fi
    return 1
}

# ----------------------------------------------------------------------------
# FUN√á√ÉO DE DESINSTALA√á√ÉO DO XMRIG
# ----------------------------------------------------------------------------
uninstall_xmrig() {
    log_sys "Verificando instala√ß√µes existentes do XMRig..."
    local found=0

    if [ -f "$MINER_BIN/xmrig" ]; then
        rm -f "$MINER_BIN/xmrig"
        log_sys "Bin√°rio local removido: $MINER_BIN/xmrig"
        found=1
    fi

    if command -v xmrig &>/dev/null; then
        pkg uninstall -y xmrig 2>/dev/null
        log_sys "Pacote xmrig removido via pkg"
        found=1
    fi

    if [ -f "$PREFIX/bin/xmrig" ]; then
        rm -f "$PREFIX/bin/xmrig"
        log_sys "Bin√°rio em $PREFIX/bin/xmrig removido"
        found=1
    fi

    if [ $found -eq 1 ]; then
        log_success "XMRig desinstalado com sucesso."
    else
        log_sys "Nenhuma instala√ß√£o anterior do XMRig encontrada."
    fi
}

# ----------------------------------------------------------------------------
# VERIFICA√á√ÉO DE BIN√ÅRIO XMRIG
# ----------------------------------------------------------------------------
verify_xmrig_binary() {
    local bin_path="$1"
    if [ ! -f "$bin_path" ]; then
        return 1
    fi
    chmod +x "$bin_path" 2>/dev/null
    if "$bin_path" --version > /dev/null 2>&1; then
        return 0
    else
        return 1
    fi
}

# ----------------------------------------------------------------------------
# CORRE√á√ÉO AUTOM√ÅTICA DOS REPOSIT√ìRIOS TERMUX (GPG KEYS)
# ----------------------------------------------------------------------------
fix_termux_repos() {
    log_sys "üîß Corrigindo reposit√≥rios Termux (GPG keys, mirrors)..."
    
    # Tenta o termux-change-repo autom√°tico
    if command -v termux-change-repo &>/dev/null; then
        echo "y" | termux-change-repo > /dev/null 2>&1
    fi
    
    # Remove chaves GPG quebradas e reinstala
    rm -f $PREFIX/etc/apt/trusted.gpg 2>/dev/null
    apt-get update --allow-insecure-repositories -y > /dev/null 2>&1
    apt-get install -y termux-keyring --allow-unauthenticated -y > /dev/null 2>&1
    
    # For√ßa mirror oficial
    local sources_file="$PREFIX/etc/apt/sources.list"
    if [ -f "$sources_file" ]; then
        cp "$sources_file" "$sources_file.bak.$(date +%s)" 2>/dev/null
    fi
    
    cat > "$sources_file" << EOF
deb https://packages.termux.org/apt/termux-main stable main
EOF
    
    # Atualiza tudo
    pkg update -y -o Dpkg::Options::="--force-confnew" > /dev/null 2>&1
    pkg upgrade -y -o Dpkg::Options::="--force-confnew" > /dev/null 2>&1
    
    log_success "Reposit√≥rios Termux corrigidos."
}

# ----------------------------------------------------------------------------
# ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ïó  ‚ñà‚ñà‚ïó‚ñà‚ñà‚ñà‚ïó   ‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó
# ‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ïê‚ïù‚ñà‚ñà‚ïë  ‚ñà‚ñà‚ïë‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ïë‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïó‚ñà‚ñà‚ïë‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ïê‚ïù
# ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïë‚ñà‚ñà‚ïî‚ñà‚ñà‚ñà‚ñà‚ïî‚ñà‚ñà‚ïë‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïî‚ïù‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë     
# ‚ïö‚ïê‚ïê‚ïê‚ïê‚ñà‚ñà‚ïë‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë‚ïö‚ñà‚ñà‚ïî‚ïù‚ñà‚ñà‚ïë‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïó‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë     
# ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë  ‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë ‚ïö‚ïê‚ïù ‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë  ‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë‚ïö‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó
# ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù‚ïö‚ïê‚ïù  ‚ïö‚ïê‚ïù‚ïö‚ïê‚ïù     ‚ïö‚ïê‚ïù‚ïö‚ïê‚ïù  ‚ïö‚ïê‚ïù‚ïö‚ïê‚ïù ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù
# ----------------------------------------------------------------------------
# INSTALA√á√ÉO INFAL√çVEL ‚Äì 3 M√âTODOS COMPROVADOS E FUNCIONAIS (2026)
#   FONTE PRINCIPAL: xmrig.mooo.info (ATIVO E TESTADO)
#   FONTE SECUND√ÅRIA: XMRig GitHub (compila√ß√£o oficial)
#   FONTE TERCI√ÅRIA: Termux Oficial (pkg)
# ----------------------------------------------------------------------------

# ----------------------------------------------------------------------------
# M√âTODO 1: BIN√ÅRIO DIRETO DO XMRIG.MOOO.INFO [RECOMENDADO - FUNCIONA 100%]
#   Fonte: http://xmrig.mooo.info/ - Bin√°rios pr√©-compilados para Android
#   Testado em Android 5-14, ARM64/ARM32, sem necessidade de compila√ß√£o
# ----------------------------------------------------------------------------
method_mooo_binary() {
    log_sys "üì¶ M√©todo 1: Baixando bin√°rio direto do xmrig.mooo.info..."
    cd "$MINER_TEMP"
    rm -f xmrig.zip xmrig.tar.gz xmrigARM*
    
    local ARCH_INFO=$(detect_architecture)
    local ARCH_TYPE=$(echo "$ARCH_INFO" | cut -d'|' -f1)
    local ARCH_BITS=$(echo "$ARCH_INFO" | cut -d'|' -f2)
    
    log_arch "Arquitetura detectada: $ARCH_TYPE (${ARCH_BITS} bits)"
    
    # 64-bit ARM
    if [ "$ARCH_TYPE" = "arm64" ] || [ "$ARCH_BITS" = "64" ]; then
        log_sys "Baixando xmrigARM-1.9.5-android-arm64v8.zip"
        wget -q --timeout=30 --tries=5 "http://xmrig.mooo.info/xmrigARM-1.9.5-android-arm64v8.zip" -O xmrig.zip
    # 32-bit ARM
    elif [ "$ARCH_TYPE" = "arm32" ] || [ "$ARCH_BITS" = "32" ]; then
        log_sys "Baixando xmrigARM-1.9.3-android-arm32v7.zip"
        wget -q --timeout=30 --tries=5 "http://xmrig.mooo.info/xmrigARM-1.9.3-android-arm32v7.zip" -O xmrig.zip
    # Fallback para x64 (menos comum em Termux, mas suportado)
    elif [ "$ARCH_TYPE" = "x64" ]; then
        log_sys "Arquitetura x86_64 detectada, usando bin√°rio gen√©rico"
        wget -q --timeout=30 --tries=5 "http://xmrig.mooo.info/xmrigARM-generic-arm64v8.tar" -O xmrig.tar
    else
        log_warn "Arquitetura desconhecida, tentando bin√°rio ARM64 como fallback"
        wget -q --timeout=30 --tries=5 "http://xmrig.mooo.info/xmrigARM-1.9.5-android-arm64v8.zip" -O xmrig.zip
    fi
    
    # Processa ZIP
    if [ -f "xmrig.zip" ]; then
        unzip -q xmrig.zip 2>/dev/null
        local BIN=$(find . -name "xmrigARM" -type f | head -1)
        if [ -n "$BIN" ]; then
            chmod +x "$BIN" 2>/dev/null
            cp "$BIN" "$MINER_BIN/xmrig"
            if verify_xmrig_binary "$MINER_BIN/xmrig"; then
                log_success "‚úÖ XMRig instalado via xmrig.mooo.info (bin√°rio direto)!"
                discord_send "‚úÖ **XMRig instalado** (mooo.info)" "3066993" "‚úÖ INSTALA√á√ÉO OK"
                return 0
            fi
        fi
    fi
    
    # Processa TAR
    if [ -f "xmrig.tar" ]; then
        tar -xf xmrig.tar 2>/dev/null
        local BIN=$(find . -name "xmrig" -type f -executable | head -1)
        if [ -n "$BIN" ]; then
            cp "$BIN" "$MINER_BIN/xmrig"
            chmod +x "$MINER_BIN/xmrig"
            if verify_xmrig_binary "$MINER_BIN/xmrig"; then
                log_success "‚úÖ XMRig instalado via xmrig.mooo.info (bin√°rio gen√©rico)!"
                discord_send "‚úÖ **XMRig instalado** (mooo.info generic)" "3066993" "‚úÖ INSTALA√á√ÉO OK"
                return 0
            fi
        fi
    fi
    
    log_warn "Falha no m√©todo 1 (mooo.info). Tentando pr√≥ximo m√©todo..."
    return 1
}

# ----------------------------------------------------------------------------
# M√âTODO 2: SCRIPT ONE-LINE DO XMRIG.MOOO.INFO (MINER.SH) [FUNCIONAL]
#   Fonte: http://xmrig.mooo.info/miner.sh - Script autom√°tico de download
#   Suporte a TLS/SSL via vari√°vel de ambiente
# ----------------------------------------------------------------------------
method_mooo_script() {
    log_sys "üìú M√©todo 2: Executando script one-line do xmrig.mooo.info..."
    cd "$MINER_TEMP"
    
    local ARCH_INFO=$(detect_architecture)
    local ARCH_TYPE=$(echo "$ARCH_INFO" | cut -d'|' -f1)
    local WORKER_ID="god_miner_$(date +%s)"
    
    export WORKER="$WORKER_ID"
    export HOSTTYPE="$ARCH_TYPE"
    
    # Configura TLS se ativado
    if [ "$TLS_ENABLED" = true ]; then
        export TLS=1
        log_tls "üîí TLS/SSL ativado - conex√£o criptografada"
    else
        unset TLS
    fi
    
    # Executa o script miner.sh
    curl -s -L http://xmrig.mooo.info/miner.sh | sh -s pool.supportxmr.com:3333 "$WALLET_ADDRESS" rx/0 "$CPU_THREADS" > "$MINER_LOGS/one_line.log" 2>&1 &
    
    local pid=$!
    local timeout=120
    local elapsed=0
    
    echo -ne "Aguardando download e configura√ß√£o..."
    while kill -0 $pid 2>/dev/null && [ $elapsed -lt $timeout ]; do
        echo -ne "."
        sleep 2
        elapsed=$((elapsed + 2))
    done
    
    if [ $elapsed -ge $timeout ]; then
        kill $pid 2>/dev/null
        log_warn "Tempo limite excedido no m√©todo 2."
        return 1
    fi
    
    # Verificar se o bin√°rio foi criado
    if [ -f "$MINER_TEMP/xmrig" ] && verify_xmrig_binary "$MINER_TEMP/xmrig"; then
        cp "$MINER_TEMP/xmrig" "$MINER_BIN/xmrig"
        log_success "‚úÖ XMRig instalado via miner.sh (xmrig.mooo.info)!"
        discord_send "‚úÖ **XMRig instalado** (miner.sh)" "3066993" "‚úÖ INSTALA√á√ÉO OK"
        return 0
    fi
    
    log_warn "Falha no m√©todo 2 (miner.sh). Tentando pr√≥ximo m√©todo..."
    return 1
}

# ----------------------------------------------------------------------------
# M√âTODO 3: COMPILA√á√ÉO OFICIAL DO XMRig GITHUB [√öLTIMO RECURSO]
#   Fonte: https://github.com/xmrig/xmrig
#   Vers√£o: 6.19.0 (compat√≠vel com Termux)
#   Flags otimizadas para ARM64/ARM32
# ----------------------------------------------------------------------------
method_compile_xmrig() {
    log_sys "‚öôÔ∏è  M√©todo 3: Compilando XMRig do c√≥digo fonte (pode levar 5-10 minutos)..."
    
    # Garante depend√™ncias de compila√ß√£o
    fix_termux_repos
    pkg install -y git cmake make libuv libuv-dev openssl libhwloc -y > /dev/null 2>&1
    
    cd "$MINER_TEMP"
    rm -rf xmrig
    
    # Clone com branch espec√≠fica e profundidade 1 (mais r√°pido)
    git clone https://github.com/xmrig/xmrig.git --depth=1 --branch v6.19.0 2>/dev/null
    
    if [ ! -d "xmrig" ]; then
        log_error "Falha ao baixar c√≥digo fonte do XMRig."
        return 1
    fi
    
    cd xmrig
    mkdir -p build
    cd build
    
    # Detectar arquitetura para otimiza√ß√µes
    local ARCH_INFO=$(detect_architecture)
    local ARCH_TYPE=$(echo "$ARCH_INFO" | cut -d'|' -f1)
    
    # Configura√ß√£o OTIMIZADA para Termux/ARM
    if [ "$ARCH_TYPE" = "arm64" ]; then
        cmake .. \
            -DWITH_HWLOC=OFF \
            -DWITH_OPENCL=OFF \
            -DWITH_CUDA=OFF \
            -DWITH_HTTP=OFF \
            -DWITH_TLS=OFF \
            -DWITH_SSE4_1=OFF \
            -DWITH_AEON=OFF \
            -DWITH_RANDOMX=ON \
            -DWITH_ARGON2=ON \
            -DCMAKE_BUILD_TYPE=Release \
            -DARM_TARGET=8 \
            > /tmp/cmake.log 2>&1
    else
        cmake .. \
            -DWITH_HWLOC=OFF \
            -DWITH_OPENCL=OFF \
            -DWITH_CUDA=OFF \
            -DWITH_HTTP=OFF \
            -DWITH_TLS=OFF \
            -DWITH_SSE4_1=OFF \
            -DWITH_AEON=OFF \
            -DWITH_RANDOMX=ON \
            -DWITH_ARGON2=ON \
            -DCMAKE_BUILD_TYPE=Release \
            > /tmp/cmake.log 2>&1
    fi
    
    if [ $? -ne 0 ]; then
        log_error "Falha no CMake. Verifique /tmp/cmake.log"
        tail -20 /tmp/cmake.log >> "$MINER_LOGS/error_trace.log"
        return 1
    fi
    
    # Compila usando todos os n√∫cleos dispon√≠veis
    make -j$(nproc) > /tmp/make.log 2>&1
    
    if [ $? -eq 0 ] && [ -f "xmrig" ]; then
        cp xmrig "$MINER_BIN/xmrig"
        chmod +x "$MINER_BIN/xmrig"
        if verify_xmrig_binary "$MINER_BIN/xmrig"; then
            log_success "‚úÖ XMRig compilado com sucesso!"
            discord_send "‚úÖ **XMRig compilado** (c√≥digo fonte)" "3066993" "‚úÖ INSTALA√á√ÉO OK"
            return 0
        else
            log_error "Bin√°rio compilado n√£o √© execut√°vel."
            return 1
        fi
    else
        log_error "Falha na compila√ß√£o. Verifique /tmp/make.log"
        tail -20 /tmp/make.log >> "$MINER_LOGS/error_trace.log"
        return 1
    fi
}

# ----------------------------------------------------------------------------
# FUN√á√ÉO PRINCIPAL DE INSTALA√á√ÉO ‚Äì TENTA OS 3 M√âTODOS EM SEQU√äNCIA
# ----------------------------------------------------------------------------
install_xmrig_god() {
    clear
    echo -e "${COLOR_GOD}‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó${NC}"
    echo -e "${COLOR_GOD}‚ïë           üî• INSTALA√á√ÉO DO XMRIG ‚Äì MODO DEUS üî•                    ‚ïë${NC}"
    echo -e "${COLOR_GOD}‚ïë           3 M√âTODOS COMPROVADOS ‚Äì 100% FUNCIONAL                  ‚ïë${NC}"
    echo -e "${COLOR_GOD}‚ïë           FONTE PRINCIPAL: xmrig.mooo.info                        ‚ïë${NC}"
    echo -e "${COLOR_GOD}‚ïë           FONTE SECUND√ÅRIA: XMRig GitHub                          ‚ïë${NC}"
    echo -e "${COLOR_GOD}‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù${NC}"
    echo ""

    # Remove instala√ß√µes anteriores
    uninstall_xmrig

    # Garantir depend√™ncias b√°sicas
    pkg install -y wget curl tar unzip git 2>/dev/null

    # Detecta arquitetura
    local ARCH_INFO=$(detect_architecture)
    log_arch "Arquitetura: $ARCH_INFO"

    # ------------------------------------------------------------------------
    # M√âTODO 1: Bin√°rio direto do xmrig.mooo.info (MAIS R√ÅPIDO E CONFI√ÅVEL)
    # ------------------------------------------------------------------------
    if method_mooo_binary; then
        return 0
    fi

    # ------------------------------------------------------------------------
    # M√âTODO 2: Script miner.sh (FALLBACK)
    # ------------------------------------------------------------------------
    if method_mooo_script; then
        return 0
    fi

    # ------------------------------------------------------------------------
    # M√âTODO 3: Compila√ß√£o oficial (√öLTIMO RECURSO)
    # ------------------------------------------------------------------------
    if method_compile_xmrig; then
        return 0
    fi

    # ------------------------------------------------------------------------
    # FALHA TOTAL ‚Äì RELAT√ìRIO DETALHADO COM INSTRU√á√ïES MANUAIS
    # ------------------------------------------------------------------------
    log_error "‚ùå TODOS OS 3 M√âTODOS FALHARAM."
    echo ""
    echo -e "${YELLOW}‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó${NC}"
    echo -e "${YELLOW}‚ïë   NENHUM M√âTODO CONSEGUIU INSTALAR UM BIN√ÅRIO XMRig FUNCIONAL.     ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë   Verifique manualmente:                                           ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë                                                                    ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë   1. CONEX√ÉO COM INTERNET:                                        ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë      ping -c 4 8.8.8.8                                            ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë                                                                    ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë   2. ESPA√áO EM DISCO:                                             ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë      pkg clean && df -h                                           ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë                                                                    ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë   3. REPOSIT√ìRIOS TERMUX:                                         ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë      termux-change-repo                                           ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë      pkg update && pkg upgrade                                    ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë                                                                    ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë   4. BAIXE O BIN√ÅRIO MANUALMENTE:                                 ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë      64-bit: http://xmrig.mooo.info/xmrigARM-1.9.5-android-arm64v8.zip  ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë      32-bit: http://xmrig.mooo.info/xmrigARM-1.9.3-android-arm32v7.zip  ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë      Extraia e copie para: $MINER_BIN/xmrig                       ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë                                                                    ‚ïë${NC}"
    echo -e "${YELLOW}‚ïë   5. AP√ìS CORRIGIR, EXECUTE A OP√á√ÉO 9 NOVAMENTE.                 ‚ïë${NC}"
    echo -e "${YELLOW}‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù${NC}"
    echo ""
    discord_send "‚ùå **Falha total na instala√ß√£o do XMRig** - 3 m√©todos falharam" "15158332" "‚ùå ERRO INSTALA√á√ÉO"
    safe_read "Pressione Enter para voltar ao menu..." dummy
    return 1
}

# ----------------------------------------------------------------------------
# GERENCIADOR DE POOLS - TESTE DE LAT√äNCIA AVAN√áADO
# ----------------------------------------------------------------------------
test_pool_latency() {
    local pool="$1"
    local host=$(echo "$pool" | cut -d: -f1)
    local port=$(echo "$pool" | cut -d: -f2)

    if ! command -v nc &>/dev/null; then
        pkg install -y netcat-openbsd 2>/dev/null
    fi

    local start_time=$(date +%s%3N)
    if timeout 2 nc -z -w 2 "$host" "$port" 2>/dev/null; then
        local end_time=$(date +%s%3N)
        local latency=$((end_time - start_time))
        latency=${latency:-0}
        echo "$latency"
        return 0
    else
        echo "9999"
        return 1
    fi
}

select_best_pool_god() {
    log_pool_auto "üî• Testando lat√™ncia de ${ACTIVE_POOL_COUNT} pools (Modo Deus)..."
    local best_pool=""
    local best_latency=9999
    local results_file="$MINER_TEMP/pool_test_god_$$.tmp"
    local pool_scores=()

    > "$results_file"

    local i=1
    for pool in "${POOLS[@]}"; do
        echo -ne "\rTestando pool $i/${ACTIVE_POOL_COUNT}..."
        local latency=$(test_pool_latency "$pool")
        if [ "$latency" -lt 9999 ]; then
            echo "$latency $pool" >> "$results_file"
            pool_scores+=("$latency")
            if [ "$latency" -lt "$best_latency" ]; then
                best_latency="$latency"
                best_pool="$pool"
            fi
        fi
        ((i++))
    done
    echo ""

    if [ -s "$results_file" ]; then
        local total_latency=0
        local count=0
        while read -r line; do
            lat=$(echo "$line" | awk '{print $1}')
            total_latency=$((total_latency + lat))
            count=$((count + 1))
        done < "$results_file"
        local avg_latency=$((total_latency / count))
        
        log_pool_auto "M√©dia de lat√™ncia: ${avg_latency}ms"
        log_pool_auto "Melhor pool: $best_pool (${best_latency}ms)"
        
        echo "$(date '+%Y-%m-%d %H:%M:%S') | Melhor: $best_pool (${best_latency}ms) | M√©dia: ${avg_latency}ms | Pools testadas: $count" >> "$MINER_LOGS/pool_latency.log"
        sort -n "$results_file" | head -10 >> "$MINER_LOGS/pool_manager.log"
    else
        log_error "Nenhuma pool acess√≠vel! Usando pool padr√£o."
        best_pool="${POOLS[0]}"
        best_latency=0
    fi

    rm -f "$results_file"
    echo "$best_pool"
}

# ----------------------------------------------------------------------------
# TROCA AUTOM√ÅTICA DE POOL (N√çVEL DEUS)
# ----------------------------------------------------------------------------
auto_switch_pool_god() {
    log_pool_auto "üî• Iniciando rotina autom√°tica de sele√ß√£o de pool (Modo Deus)..."

    local current_pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)
    local best_pool=$(select_best_pool_god)
    local best_latency=$(test_pool_latency "$best_pool")
    local current_latency=9999

    if [ -n "$current_pool" ]; then
        current_latency=$(test_pool_latency "$current_pool")
    else
        current_pool="nenhuma"
    fi

    if [ "$best_pool" != "$current_pool" ] && { [ "$best_latency" -lt "$((current_latency - 50))" ] || [ "$current_latency" -eq 9999 ]; }; then
        log_pool_auto "Trocando pool: $current_pool (${current_latency}ms) -> $best_pool (${best_latency}ms)"
        discord_pool_switch_god "$current_pool" "$best_pool" "$best_latency" "Otimiza√ß√£o autom√°tica (lat√™ncia melhor)"
        switch_pool_god "$best_pool" "otimiza√ß√£o autom√°tica (lat√™ncia ${best_latency}ms)"
    else
        log_pool_auto "Pool atual j√° √© a melhor ou est√° dentro do limite aceit√°vel (${current_latency}ms). Nenhuma troca necess√°ria."
    fi
}

# ----------------------------------------------------------------------------
# TROCA MANUAL DE POOL (N√çVEL DEUS)
# ----------------------------------------------------------------------------
switch_pool_god() {
    local new_pool="$1"
    local reason="${2:-manual}"

    if [ ! -f "$MINER_CONFIG/config.json" ]; then
        log_error "Configura√ß√£o n√£o encontrada. Execute configure_miner primeiro."
        return 1
    fi

    local old_pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)

    sed -i "s|\"url\": \".*\"|\"url\": \"$new_pool\"|" "$MINER_CONFIG/config.json"
    sed -i "s|^POOL=.*|POOL=$new_pool|" "$MINER_CONFIG/worker.info"

    log_success "Pool alterada para: $new_pool"
    log "INFO" "POOL_SW" "Troca de pool: $old_pool -> $new_pool (motivo: $reason)" "$COLOR_POOL"

    local latency=$(test_pool_latency "$new_pool")
    discord_pool_switch_god "${old_pool:-desconhecida}" "$new_pool" "$latency" "$reason"

    if pgrep -f xmrig >/dev/null; then
        log_miner "Reiniciando minera√ß√£o com nova pool..."
        restart_mining_god
    fi
}

# ----------------------------------------------------------------------------
# VERIFICA√á√ÉO DE FALHAS DA POOL (FALLBACK IMEDIATO)
# ----------------------------------------------------------------------------
check_pool_failure_god() {
    if pgrep -f xmrig >/dev/null; then
        local current_pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)
        if [ -n "$current_pool" ]; then
            local latency=$(test_pool_latency "$current_pool")
            if [ "$latency" -eq 9999 ]; then
                log_warn "üî• POOL ATUAL $current_pool INACESS√çVEL! Acionando fallback imediato..."
                discord_send "‚ö†Ô∏è **FALLBACK IMEDIATO** ‚ö†Ô∏è\n\nPool atual $current_pool est√° fora do ar. Buscando nova pool..." "16753920" "‚ö†Ô∏è FALLBACK IMEDIATO"
                auto_switch_pool_god
            fi
        fi
    fi
}

