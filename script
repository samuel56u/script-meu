start_watchdog

# ---------- MENU PRINCIPAL (CORRIGIDO) ----------
while true; do
    clear
    echo -e "${COLOR_MENU}‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó${NC}"
    echo -e "${COLOR_MENU}‚ïë                            MENU PRINCIPAL                            ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ï†‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ï£${NC}"
    echo -e "${COLOR_MENU}‚ïë  1) üöÄ INICIAR MINERA√á√ÉO         2) üîÑ REINICIAR MINERA√á√ÉO           ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë  3) üìà DASHBOARD                  4) üí∞ GANHOS EM BITCOIN             ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë  5) üîß INSTALAR XMRIG             6) üíº GERENCIAR CARTEIRAS           ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë  7) üßπ LIMPAR LOGS                8) üîÑ RESTAURAR BACKUP              ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë  9) üìÇ CARREGAR PERFIL           10) üÜò AJUDA                         ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë 11) üõë PARAR MINERA√á√ÉO            12) üìä STATUS COMPLETO              ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë 13) üìù LOGS DO MINERADOR         14) ‚öôÔ∏è  CONFIGURA√á√ïES AVAN√áADAS      ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë 15) üåê TROCAR POOL MANUAL        16) üì® TESTAR NOTIFICA√á√ïES           ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë 17) üíæ BACKUP                    18) üíæ SALVAR PERFIL ATUAL          ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë 19) üìú VER HIST√ìRICO DE SHARES   20) üìä ESTAT√çSTICAS DETALHADAS      ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïë  0) üö™ SAIR                                                        ‚ïë${NC}"
    echo -e "${COLOR_MENU}‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù${NC}"
    echo ""
    echo -e "   ${COLOR_WALLET}üëõ Carteira ativa: ${WALLET:0:25}...${NC}"
    echo -e "   ${COLOR_DISCORD}üì® Discord: $([ "$NOTIFY_DISCORD" = true ] && [ -n "$WEBHOOK_DISCORD" ] && echo "‚úÖ" || echo "‚ùå") | Telegram: $([ "$NOTIFY_TELEGRAM" = true ] && echo "‚úÖ" || echo "‚ùå") | Push: $([ "$NOTIFY_PUSHOVER" = true ] && echo "‚úÖ" || echo "‚ùå")${NC}"
    if pgrep -f xmrig >/dev/null; then
        echo -e "   ${COLOR_SUCCESS}‚ñ∂ Minera√ß√£o: ATIVA | Hashrate: $(get_hashrate) | Satoshis: $(cat "$MINER_STATS/total_satoshis" 2>/dev/null || echo 0) sats${NC}"
        pool=$(grep "^POOL=" "$MINER_CONFIG/worker.info" 2>/dev/null | cut -d= -f2)
        echo -e "   üåê Pool: ${pool:-N/A}"
    else
        echo -e "   ${COLOR_ERROR}‚ñ∂ Minera√ß√£o: INATIVA${NC}"
    fi
    echo ""
    printf "   Escolha uma op√ß√£o (0-20): "
    IFS= read -r choice
    # Remove caracteres n√£o num√©ricos
    choice=$(echo "$choice" | tr -cd '0-9')
    # Se vazio, define como inv√°lido
    [ -z "$choice" ] && choice=99

    case $choice in
        0) clean_exit ;;
        1) start_mining ;;
        2) restart_mining ;;
        3) dashboard ;;
        4) show_earnings ;;
        5) install_xmrig ;;
        6) manage_wallets ;;
        7) clear_logs ;;
        8) restore_backup ;;
        9) load_profile ;;
        10) show_help ;;
        11) stop_mining ;;
        12) show_status ;;
        13) show_logs ;;
        14) config_menu ;;
        15) manual_pool ;;
        16) test_notifications ;;
        17) backup ;;
        18) save_profile ;;
        19) show_history ;;
        20) show_detailed_stats ;;
        *) 
            echo -e "${COLOR_ERROR}   ‚ùå Op√ß√£o inv√°lida! Digite apenas n√∫meros.${NC}"
            ;;
    esac
    # Pausa para ler a mensagem, exceto para dashboard que j√° tem seu pr√≥prio loop
    if [ "$choice" != "3" ]; then
        echo ""
        printf "Pressione Enter para continuar..."
        read -r
    fi
done
