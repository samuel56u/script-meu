    source "$SETTINGS"
else
    CPU_THREADS=$(($(nproc 2>/dev/null || echo 2) - 1))
    [ $CPU_THREADS -lt 1 ] && CPU_THREADS=1
    CPU_PRIORITY=5
    CPU_MAX=75
    TLS_ENABLED=false
    AUTO_POOL=true
    POOL_INTERVAL=1800
    AUTO_TUNE=true
    TEMP_LIMIT=70
    BATTERY_LIMIT=20
    ENABLE_DISCORD=true
    ENABLE_TELEGRAM=false
    ENABLE_PUSHOVER=false
    ACTIVE_WALLET="principal"
    ACTIVE_PROFILE="default"
    cat > "$SETTINGS" << EOF
