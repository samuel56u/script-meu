    echo -e "${COLOR_ERROR}Este script deve ser executado no Termux!${NC}"
    exit 1
fi

if ! ping -c 1 8.8.8.8 >/dev/null 2>&1; then
    log_warn "Sem conex√£o com a internet. Alguns recursos podem n√£o funcionar."
fi

