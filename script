telegram_send() {
    if [ -z "$WEBHOOK_TELEGRAM" ]; then
        return 1
    fi
    local message="$1"
    curl -s -X POST "https://api.telegram.org/bot${WEBHOOK_TELEGRAM}/sendMessage" \
        -d chat_id="@xmrig_miner" \
        -d text="$message" \
        -d parse_mode="Markdown" >/dev/null 2>&1
}

