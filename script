    echo "‚ïë  üíµ Estimativa USD/dia: \$${usd_day}                                            ‚ïë"
    echo "‚ïë  ‚Çø Estimativa BTC/dia: ${btc_day} BTC                                           ‚ïë"
    echo "‚ïë  üéØ Efici√™ncia: ${efficiency}%                                                  ‚ïë"
    echo "‚ïë  ‚úÖ Shares nesta sess√£o: ${shares_this_session}                                 ‚ïë"
    echo "‚ïë  ‚è±Ô∏è  Uptime: ${uptime_minutes} minutos                                          ‚ïë"
    echo "‚ïë                                                                                  ‚ïë"
    echo "‚ïë  üîß Algoritmo: ${algo}                                                          ‚ïë"
    echo "‚ïë  üåê Pool: ${pool}                                                               ‚ïë"
    echo "‚ïë  üÜî Worker: ${worker}                                                           ‚ïë"
    echo "‚ïë                                                                                  ‚ïë"
    echo "‚ïë  üëõ Carteira: ${WALLET_NICEHASH:0:20}...                                        ‚ïë"
    echo "‚ïë                                                                                  ‚ïë"
    echo "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
    echo -e "${NC}"

    echo "$total" > "$MINER_STATS/total_satoshis"
    echo "$hashrate" > "$MINER_STATS/current_hashrate"
    echo "$temp" > "$MINER_STATS/current_temperature"
