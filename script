# =============================================================================
# FUNÃ‡ÃƒO DE LOG SUPREMA (NÃVEL DEUS) - SEM DEPENDÃŠNCIA DE %N
# =============================================================================
god_log() {
    ((LOG_COUNTER++))
    local timestamp=$(date '+%Y-%m-%d %H:%M:%S')
    local level="$1"
    local category="$2"
    local message="$3"
    local data="${4:-}"
    
    # Montar entrada completa para arquivo
    local log_entry="[$timestamp] [$level] [$category] [$SESSION_ID] $message"
    [ -n "$data" ] && log_entry="$log_entry | DATA: $data"
    
    # Escrever em arquivos apropriados
    echo "$log_entry" >> "$MAIN_LOG"
    echo "$log_entry" >> "$SYSTEM_LOG"
    case "$level" in
        ERROR|CRITICAL) echo "$log_entry" >> "$ERROR_LOG" ;;
        DEBUG) echo "$log_entry" >> "$DEBUG_LOG" ;;
        AUDIT) echo "$log_entry" >> "$AUDIT_LOG" ;;
    esac
    
    # SaÃ­da colorida no console
    local color="$WHITE"
    case "$level" in
        GOD)      color="$PURPLE$BOLD" ;;
        INFO)     color="$CYAN" ;;
        OK)       color="$GREEN" ;;
        WARN)     color="$YELLOW" ;;
        ERROR)    color="$RED" ;;
        CRITICAL) color="$RED$BOLD" ;;
        AUDIT)    color="$BLUE$BOLD" ;;
        DEBUG)    color="$WHITE" ;;
        SATOSHI)  color="$YELLOW$BOLD" ;;
        REAIS)    color="$GREEN$BOLD" ;;
        POOL)     color="$BLUE" ;;
        HASHRATE) color="$GREEN" ;;
        SHARE)    color="$YELLOW" ;;
    esac
    
    echo -e "${color}[${timestamp:11:8}] [${level}] [${category}] ${message}${NC}"
}

# =============================================================================
# FUNÃ‡ÃƒO DE LOG PARA DISCORD (EMBED BONITO) - COM ESCAPE DE ASPAS
# =============================================================================
discord_embed() {
    local title="$1"
    local description="$2"
    local color="$3"  # decimal
    local fields="$4"
    
    # Escapar aspas duplas no tÃ­tulo e descriÃ§Ã£o
    title=$(echo "$title" | sed 's/"/\\"/g')
    description=$(echo "$description" | sed 's/"/\\"/g')
    
    local embed='{
        "embeds": [{
            "title": "'"$title"'",
            "description": "'"$description"'",
            "color": '"$color"',
            "timestamp": "'$(date -Iseconds)'",
            "footer": {
                "text": "Megalodon Satoshi God | 1 SATOSHI = R$1,30"
            }
        }]
    }'
    
    if [ -n "$fields" ]; then
        embed=$(echo "$embed" | sed "s/\"fields\": \[/\"fields\": [$fields,/" 2>/dev/null)
    fi
    
    # Enviar em background para nÃ£o travar
    curl -s -H "Content-Type: application/json" -X POST -d "$embed" "$DISCORD_WEBHOOK" >/dev/null 2>&1 &
}

# =============================================================================
# DETECTAR CPU (DETALHADO)
# =============================================================================
detect_cpu() {
    god_log "INFO" "Hardware" "Iniciando detecÃ§Ã£o de CPU..."
    
    if [ -f "/proc/cpuinfo" ]; then
        THREADS=$(grep -c ^processor /proc/cpuinfo 2>/dev/null)
        THREADS=${THREADS:-2}
        CPU_MODEL=$(grep "model name" /proc/cpuinfo 2>/dev/null | head -1 | cut -d: -f2 | xargs)
        [ -z "$CPU_MODEL" ] && CPU_MODEL=$(grep "Hardware" /proc/cpuinfo 2>/dev/null | head -1 | cut -d: -f2 | xargs)
        CPU_FEATURES=$(grep Features /proc/cpuinfo 2>/dev/null | head -1 | cut -d: -f2 | xargs)
    else
        THREADS=$(nproc 2>/dev/null || echo 2)
        CPU_MODEL="Unknown"
        CPU_FEATURES=""
    fi
    
    ARCH=$(uname -m)
    case "$ARCH" in
        aarch64|arm64)  ARCH_TYPE="arm64" ;;
        armv7l|armhf)   ARCH_TYPE="armv7" ;;
        x86_64)         ARCH_TYPE="x64" ;;
        *)              ARCH_TYPE="$ARCH" ;;
    esac
    
    # Detectar AES e NEON
    local aes="âœ—"
    local neon="âœ—"
    if [[ "$CPU_FEATURES" == *"aes"* ]]; then aes="âœ“"; fi
    if [[ "$CPU_FEATURES" == *"neon"* ]]; then neon="âœ“"; fi
    
    god_log "OK" "Hardware" "CPU: $THREADS threads, Modelo: $CPU_MODEL, Arch: $ARCH_TYPE, AES: $aes, NEON: $neon"
    
    # Salvar info
    echo "CPU: $THREADS cores" > "$MINER_HOME/cpu_info.txt"
    echo "Modelo: $CPU_MODEL" >> "$MINER_HOME/cpu_info.txt"
    echo "Arquitetura: $ARCH_TYPE" >> "$MINER_HOME/cpu_info.txt"
    echo "AES: $aes" >> "$MINER_HOME/cpu_info.txt"
    echo "NEON: $neon" >> "$MINER_HOME/cpu_info.txt"
}

# =============================================================================
# CONVERSÃ•ES
# =============================================================================
satoshi_para_reais() {
    echo "scale=2; $1 * $VALOR_SATOSHI" | bc 2>/dev/null || echo "0.00"
}

reais_para_satoshi() {
    echo "scale=0; $1 / $VALOR_SATOSHI" | bc 2>/dev/null || echo "0"
}

# =============================================================================
# ESTIMAR GANHOS (BASEADO EM HASHRATE)
# =============================================================================
estimar_ganhos() {
    local hashrate=$1
    [ -z "$hashrate" ] && hashrate=1.0
    # 1 KH/s â‰ˆ 100 satoshis/dia (ajustÃ¡vel)
    local sat_dia=$(echo "$hashrate * 100" | bc 2>/dev/null | cut -d. -f1)
    [ -z "$sat_dia" ] && sat_dia=100
    local reais_dia=$(satoshi_para_reais "$sat_dia")
    local reais_hora=$(echo "scale=2; $reais_dia / 24" | bc 2>/dev/null)
    echo "$sat_dia|$reais_dia|$reais_hora"
}

# =============================================================================
# ATUALIZAR ESTATÃSTICAS
# =============================================================================
update_stats() {
    cat > "$STATS_FILE" << EOF
Ãšltima atualizaÃ§Ã£o: $(date '+%d/%m/%Y %H:%M:%S')
Shares totais: $TOTAL_SHARES
Shares rejeitadas: $TOTAL_REJECTED
Satoshis totais: $TOTAL_SATOSHIS
Reais totais: R$ $TOTAL_REAIS
Hashrate atual: $CURRENT_HASHRATE KH/s
Melhor hashrate: $BEST_HASHRATE KH/s
Tempo ativo: $(( ($(date +%s) - START_TIME) / 3600 ))h $(( (($(date +%s) - START_TIME) % 3600) / 60 ))m
Pool atual: $CURRENT_POOL
EOF
}

adicionar_share() {
    TOTAL_SHARES=$((TOTAL_SHARES + 1))
    TOTAL_SATOSHIS=$((TOTAL_SATOSHIS + SATOSHIS_POR_SHARE))
    TOTAL_REAIS=$(echo "$TOTAL_REAIS + ($SATOSHIS_POR_SHARE * $VALOR_SATOSHI)" | bc 2>/dev/null)
    god_log "SHARE" "Miner" "Share aceito! Total: $TOTAL_SHARES, Satoshis: $TOTAL_SATOSHIS, R$: $TOTAL_REAIS"
    update_stats
}

adicionar_rejeitado() {
    TOTAL_REJECTED=$((TOTAL_REJECTED + 1))
    god_log "WARN" "Miner" "Share rejeitado! Total: $TOTAL_REJECTED"
    update_stats
}

# =============================================================================
# VERIFICAR SE O BINÃRIO Ã‰ VÃLIDO
# =============================================================================
check_binary() {
    local binary="$1"
    if [ ! -f "$binary" ]; then
        god_log "DEBUG" "CheckBinary" "Arquivo nÃ£o encontrado: $binary"
        return 1
    fi
    if [ ! -x "$binary" ]; then
        chmod +x "$binary" 2>/dev/null
    fi
    # Usar 'file' para verificar se Ã© ELF
    if command -v file >/dev/null 2>&1; then
        if file "$binary" 2>/dev/null | grep -q "ELF"; then
            # Teste rÃ¡pido de execuÃ§Ã£o
            timeout 2 "$binary" --version >/dev/null 2>&1
            local ret=$?
            if [ $ret -eq 0 ] || [ $ret -eq 1 ]; then
                god_log "DEBUG" "CheckBinary" "BinÃ¡rio vÃ¡lido: $binary"
                return 0
            fi
        fi
    else
        # Se 'file' nÃ£o estiver disponÃ­vel, tenta executar diretamente
        timeout 2 "$binary" --version >/dev/null 2>&1
        local ret=$?
        if [ $ret -eq 0 ] || [ $ret -eq 1 ]; then
            god_log "DEBUG" "CheckBinary" "BinÃ¡rio vÃ¡lido (sem file): $binary"
            return 0
        fi
    fi
    god_log "WARN" "CheckBinary" "BinÃ¡rio invÃ¡lido: $binary"
    return 1
}

# =============================================================================
# INSTALAR XMRIG (MÃšLTIPLAS TENTATIVAS + COMPILAÃ‡ÃƒO)
# =============================================================================
install_xmrig() {
    god_log "INFO" "Install" "Iniciando instalaÃ§Ã£o do XMRig..."
    
    mkdir -p "$BIN_DIR" "$TEMP_DIR"
    cd "$TEMP_DIR" || return 1

    if [ -f "$BIN_DIR/xmrig" ] && check_binary "$BIN_DIR/xmrig"; then
        god_log "OK" "Install" "Minerador jÃ¡ instalado e funcionando."
        return 0
    fi

    local sources=()
    case "$ARCH_TYPE" in
        arm64)
            sources=(
                "https://github.com/userdocs/xmrig-builds/releases/download/6.22.0/xmrig-6.22.0-linux-arm64"
                "https://github.com/xmrig/xmrig/releases/download/v6.22.0/xmrig-6.22.0-linux-static-arm64.tar.gz"
                "https://github.com/Bendr0id/xmrigCC/releases/download/3.4.0/xmrigCC-3.4.0-android-arm64"
                "https://github.com/SChernykh/xmrig/releases/download/v6.22.0/xmrig-6.22.0-android-arm64"
            )
            ;;
        armv7)
            sources=(
                "https://github.com/userdocs/xmrig-builds/releases/download/6.22.0/xmrig-6.22.0-linux-armv7"
                "https://github.com/xmrig/xmrig/releases/download/v6.22.0/xmrig-6.22.0-linux-static-armv7.tar.gz"
                "https://github.com/Bendr0id/xmrigCC/releases/download/3.4.0/xmrigCC-3.4.0-android-arm7"
            )
            ;;
        *)
            god_log "ERROR" "Install" "Arquitetura nÃ£o suportada: $ARCH_TYPE"
            return 1
            ;;
    esac

    local success=0
    for url in "${sources[@]}"; do
        god_log "INFO" "Install" "Tentando download de: $(basename "$url")"
        rm -f xmrig* 2>/dev/null
        if [[ "$url" == *.tar.gz ]]; then
            curl -L -s --connect-timeout 30 "$url" -o xmrig.tar.gz
            if [ -f "xmrig.tar.gz" ] && [ -s "xmrig.tar.gz" ]; then
                tar -xzf xmrig.tar.gz 2>/dev/null
                local found=$(find . -name "xmrig" -type f | head -1)
                if [ -n "$found" ]; then
                    cp "$found" "$BIN_DIR/xmrig"
                else
                    found=$(find . -type f -executable | head -1)
                    [ -n "$found" ] && cp "$found" "$BIN_DIR/xmrig"
                fi
            fi
        else
            curl -L -s --connect-timeout 30 "$url" -o xmrig
            if [ -f "xmrig" ] && [ -s "xmrig" ]; then
                cp xmrig "$BIN_DIR/xmrig"
            fi
        fi

        if [ -f "$BIN_DIR/xmrig" ] && check_binary "$BIN_DIR/xmrig"; then
            god_log "OK" "Install" "XMRig instalado com sucesso de $(basename "$url")"
            success=1
            break
        fi
        sleep 1
    done

    if [ $success -eq 0 ]; then
        god_log "WARN" "Install" "Nenhum binÃ¡rio prÃ©-compilado funcionou. Tentando compilar..."
        # Instalar dependÃªncias de compilaÃ§Ã£o
        pkg install -y cmake make clang git 2>/dev/null
        git clone --depth=1 https://github.com/xmrig/xmrig.git src
        cd src && mkdir build && cd build
        cmake .. -DWITH_HWLOC=OFF -DWITH_OPENCL=OFF -DWITH_CUDA=OFF -DCMAKE_BUILD_TYPE=Release
        make -j$THREADS
        if [ -f "xmrig" ]; then
            cp xmrig "$BIN_DIR/xmrig"
            chmod +x "$BIN_DIR/xmrig"
            if check_binary "$BIN_DIR/xmrig"; then
                god_log "OK" "Install" "XMRig compilado com sucesso!"
                success=1
            fi
        fi
        cd "$TEMP_DIR"
    fi

    if [ $success -eq 1 ]; then
        god_log "OK" "Install" "Minerador pronto para uso."
        return 0
    else
        god_log "ERROR" "Install" "Falha na instalaÃ§Ã£o do XMRig."
        return 1
    fi
}

# =============================================================================
# TESTAR CONEXÃƒO COM POOL
# =============================================================================
test_pool_connection() {
    local host="$1"
    local port="$2"
    (echo > "/dev/tcp/$host/$port") 2>/dev/null
    return $?
}

# =============================================================================
# ENCONTRAR MELHOR POOL (TESTA TODAS E ESCOLHE A PRIMEIRA QUE RESPONDER)
# =============================================================================
find_best_pool() {
    god_log "POOL" "Scan" "Procurando pool RandomX funcional..."
    local working=()
    for pool_entry in "${POOLS[@]}"; do
        local name="${pool_entry%%|*}"
        local addr="${pool_entry#*|}"
        local host="${addr%:*}"
        local port="${addr#*:}"
        god_log "POOL" "Test" "Testando $name ($host:$port)..."
        if test_pool_connection "$host" "$port"; then
            god_log "OK" "Pool" "$name respondeu."
            working+=("$pool_entry")
        else
            god_log "WARN" "Pool" "$name nÃ£o respondeu."
        fi
        sleep 1
    done

    if [ ${#working[@]} -gt 0 ]; then
        local selected="${working[0]}"
        local name="${selected%%|*}"
        local addr="${selected#*|}"
        god_log "OK" "Pool" "Pool selecionada: $name ($addr)"
        CURRENT_POOL="$selected"
        echo "$selected" > "$CONFIG_DIR/last_pool.txt"
        discord_embed "âœ… Pool Selecionada" "**$name**\n\`$addr\`" "65280" ""
        return 0
    else
        god_log "ERROR" "Pool" "Nenhuma pool respondeu. Verifique sua internet."
        discord_embed "âŒ Erro de ConexÃ£o" "Nenhuma pool RandomX respondeu." "16711680" ""
        return 1
    fi
}

# =============================================================================
# INICIAR MINERAÃ‡ÃƒO (PRIMEIRO PLANO)
# =============================================================================
start_mining() {
    clear
    echo -e "${GREEN}${BOLD}"
    echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
    echo "â•‘         MINERAÃ‡ÃƒO RANDOMX ATIVA - LOGS NÃVEL DEUS                â•‘"
    echo "â•‘              CTRL+C PARA PARAR                                   â•‘"
    echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo -e "${NC}"

    # Garantir minerador instalado
    if [ ! -f "$BIN_DIR/xmrig" ] || ! check_binary "$BIN_DIR/xmrig"; then
        god_log "INFO" "Mining" "Minerador nÃ£o encontrado ou invÃ¡lido. Instalando..."
        install_xmrig || {
            god_log "ERROR" "Mining" "Falha na instalaÃ§Ã£o. NÃ£o Ã© possÃ­vel minerar."
            discord_embed "âŒ Falha na InstalaÃ§Ã£o" "NÃ£o foi possÃ­vel instalar o XMRig." "16711680" ""
            read -p "Pressione ENTER para voltar."
            return 1
        }
    fi

    # Encontrar pool funcional
    if ! find_best_pool; then
        god_log "ERROR" "Mining" "NÃ£o foi possÃ­vel conectar a nenhuma pool. Abortando."
        read -p "Pressione ENTER para voltar."
        return 1
    fi

    local pool_name="${CURRENT_POOL%%|*}"
    local pool_addr="${CURRENT_POOL#*|}"

    # Estimar ganhos
    earnings=$(estimar_ganhos "$THREADS")
    sat_dia=$(echo "$earnings" | cut -d'|' -f1)
    reais_dia=$(echo "$earnings" | cut -d'|' -f2)
    reais_hora=$(echo "$earnings" | cut -d'|' -f3)

    echo ""
    echo -e "${CYAN}Pool:${NC} $pool_name ($pool_addr)"
    echo -e "${CYAN}Threads:${NC} $THREADS"
    echo -e "${CYAN}Estimativa:${NC} $sat_dia sats/dia (R$ $reais_dia)"
    echo -e "${CYAN}Por hora:${NC} R$ $reais_hora"
    echo ""
    echo -e "${YELLOW}Pressione CTRL+C para parar a mineraÃ§Ã£o.${NC}"
    echo ""
    read -p "Pressione ENTER para comeÃ§ar a minerar..." dummy

    # Criar configuraÃ§Ã£o
    cat > "$TEMP_DIR/config.json" << EOF
{
    "autosave": false,
    "cpu": {
        "enabled": true,
        "max-threads-hint": $THREADS,
        "priority": 1
    },
    "donate-level": 0,
    "log-file": null,
    "pools": [
        {
            "algo": "rx/0",
            "url": "stratum+tcp://$pool_addr",
            "user": "$NICEHASH_WALLET",
            "pass": "x",
            "nicehash": true,
            "keepalive": true,
            "tls": false
        }
    ],
    "print-time": 5
}
EOF

    god_log "GOD" "Mining" "=== INICIANDO MINERAÃ‡ÃƒO ==="
    god_log "INFO" "Mining" "Pool: $pool_name ($pool_addr)"
    god_log "INFO" "Mining" "Threads: $THREADS"
    god_log "INFO" "Mining" "Carteira: $NICEHASH_WALLET"
    discord_embed "ðŸš€ MineraÃ§Ã£o Iniciada" "**Pool:** $pool_name\n**Threads:** $THREADS\n**Estimativa:** $sat_dia sats/dia (R$ $reais_dia)" "65280" ""

    echo "Iniciando minerador... Os logs aparecerÃ£o abaixo."
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"

    # Executar minerador e processar saÃ­da linha a linha
    "$BIN_DIR/xmrig" -c "$TEMP_DIR/config.json" 2>&1 | while read -r line; do
        echo "$line"

        # Log da linha bruta em arquivo de debug (opcional)
        echo "$(date '+%Y-%m-%d %H:%M:%S') $line" >> "$DEBUG_LOG"

        # Capturar hashrate (formato tÃ­pico: "speed 2.5s/60s 1.2 KH/s" ou "1.2 KH/s")
        if [[ "$line" =~ ([0-9]+\.[0-9]+)\ (kH/s|KH/s) ]]; then
            CURRENT_HASHRATE="${BASH_REMATCH[1]}"
            earnings_now=$(estimar_ganhos "$CURRENT_HASHRATE")
            sat_agora=$(echo "$earnings_now" | cut -d'|' -f1)
            reais_agora=$(echo "$earnings_now" | cut -d'|' -f2)
            echo -e "${GREEN}âš¡ $CURRENT_HASHRATE KH/s | $sat_agora sats/dia | R$ $reais_agora/dia${NC}"
            god_log "HASHRATE" "Miner" "$CURRENT_HASHRATE KH/s | $sat_agora sats/dia"
            echo "$(date '+%Y-%m-%d %H:%M:%S') $CURRENT_HASHRATE" >> "$HASHRATE_LOG"
            
            if (( $(echo "$CURRENT_HASHRATE > $BEST_HASHRATE" | bc -l 2>/dev/null) )); then
                BEST_HASHRATE=$CURRENT_HASHRATE
                god_log "OK" "Record" "Novo recorde de hashrate: $BEST_HASHRATE KH/s"
            fi
        fi

        # Capturar shares aceitos
        if [[ "$line" == *"accepted"* ]] || [[ "$line" == *"share accepted"* ]]; then
            adicionar_share
            echo -e "${YELLOW}âœ… Share aceito! Total: $TOTAL_SHARES | Acumulado: $TOTAL_SATOSHIS sats (R$ $TOTAL_REAIS)${NC}"
        fi

        # Capturar shares rejeitados
        if [[ "$line" == *"rejected"* ]]; then
            adicionar_rejeitado
            echo -e "${RED}âŒ Share rejeitado! Total: $TOTAL_REJECTED${NC}"
        fi

        # Capturar erros de conexÃ£o
        if [[ "$line" == *"read error"* ]] || [[ "$line" == *"connection refused"* ]]; then
            god_log "ERROR" "Pool" "Erro de conexÃ£o detectado: $line"
            discord_embed "âš ï¸ Erro de ConexÃ£o" "Pool $pool_name falhou. Tentando reconectar..." "16744192" ""
            break
        fi
    done

    # Se saiu do loop (erro ou Ctrl+C)
    if [ $? -ne 0 ]; then
        god_log "WARN" "Mining" "MineraÃ§Ã£o interrompida por erro. Tentando reconectar em 10s..."
        sleep 10
        start_mining
    else
        god_log "INFO" "Mining" "MineraÃ§Ã£o encerrada pelo usuÃ¡rio."
        discord_embed "â¹ï¸ MineraÃ§Ã£o Encerrada" "UsuÃ¡rio interrompeu." "16711680" ""
    fi

    echo ""
    read -p "Pressione ENTER para voltar ao menu."
}

