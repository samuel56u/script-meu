# Inicializa arquivos de estatÃ­stica
echo "0" > "$MINER_STATS/total_satoshis" 2>/dev/null
echo "0" > "$MINER_STATS/total_shares" 2>/dev/null
echo "0 H/s" > "$MINER_STATS/current_hashrate"
echo "0" > "$MINER_STATS/current_temp"
echo "0" > "$MINER_STATS/last_shares"

install_deps
start_mining
monitor
